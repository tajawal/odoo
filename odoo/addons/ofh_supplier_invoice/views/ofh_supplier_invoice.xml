<odoo>

    <record model="ir.ui.view" id="ofh_supplier_invoice_line_form_view">
        <field name="name">ofh.supplier.invoice.line.form (in ofh_supplier_invoice_line)</field>
        <field name="model">ofh.supplier.invoice.line</field>
        <field name="arch" type="xml">
            <form create="0" delete="0">
                <header>
                </header>
                <sheet>
                    <field name="currency_id" invisible="1"/>
                    <group name="main_group" col="4">
                        <field name="name"/>
                        <field name="invoice_type"/>
                        <field name="ticket_number"/>
                        <field name="invoice_status"/>
                        <field name="locator"/>
                        <field name="invoice_date"/>
                        <field name="office_id"/>
                        <field name="passenger"/>
                        <field name="vendor_id"/>
                        <field name="total"  widget="monetary"/>
                    </group>
                    <notebook>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="ofh_supplier_invoice_line_search_view">
        <field name="name">ofh.supplier.invoice.line.search (in ofh_supplier_invoice_line)</field>
        <field name="model">ofh.supplier.invoice.line</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="locator"/>
                <field name="ticket_number"/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="ofh_supplier_invoice_line_tree_view">
        <field name="name">ofh.supplier.invoice.line.tree (in ofh_supplier_invoice_line)</field>
        <field name="model">ofh.supplier.invoice.line</field>
        <field name="arch" type="xml">
            <tree delete="0">
                <field name="name"/>
                <field name="office_id"/>
                <field name="invoice_type"/>
                <field name="invoice_date"/>
                <field name="invoice_status"/>
                <field name="ticket_number"/>
                <field name="locator"/>
                <field name="currency_id" invisible="1"/>
                <field name="total" widget="monetary"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="ofh_supplier_invoice_line_pivot_view">
        <field name="name">ofh.supplier.invoice.line.pivot (in ofh_supplier_invoice_line)</field>
        <field name="model">ofh.supplier.invoice.line</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="invoice_status" type="row"/>
                <field name="total" type="measure"/>
            </pivot>
        </field>
    </record>

    <record model="ir.actions.act_window" id="ofh_supplier_all_invoice_line_act_window">
        <field name="name">Vendor Invoices lines</field>
        <field name="res_model">ofh.supplier.invoice.line</field>
        <field name="view_mode">tree,form,pivot</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.ui.menu" id="ofh_supplier_invoice_main_menu">
        <field name="name">Vendor Invoices</field>
        <field name="sequence" eval="40"/>
    </record>

    <record model="ir.ui.menu" id="ofh_supplier_invoice_line_main_menu">
        <field name="name">Invoices lines</field>
        <field name="parent_id" ref="ofh_supplier_invoice_main_menu"/>
        <field name="sequence" eval="10"/>
    </record>

    <record model="ir.ui.menu" id="all_supplier_invoice_line_menu">
        <field name="name">All lines</field>
        <field name="parent_id" ref="ofh_supplier_invoice_line_main_menu"/>
        <field name="action" ref="ofh_supplier_all_invoice_line_act_window"/>
        <field name="sequence" eval="10"/>
    </record>

    <record model="ir.ui.menu" id="ofh_supplier_invoice_import_main_menu">
        <field name="name">Import Supplier reports</field>
        <field name="parent_id" ref="ofh_supplier_invoice_main_menu"/>
        <field name="sequence" eval="20"/>
    </record>

    <record model="ir.ui.menu" id="import_backend_main_menu">
        <field name="name">Importers</field>
        <field name="parent_id" ref="ofh_supplier_invoice_main_menu"/>
        <field name="sequence" eval="60"/>
    </record>

    <record model="ir.ui.menu" id="ofh_supplier_invoice_actions_main_menu">
        <field name="name">Actions</field>
        <field name="parent_id" ref="ofh_supplier_invoice_main_menu"/>
        <field name="sequence" eval="50"/>
    </record>

    <record model="ir.actions.act_window" id="archived_supplier_invoice_line_act_window">
        <field name="name">Archived lines</field>
        <field name="res_model">ofh.supplier.invoice.line</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('active', '=', False)]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.ui.menu" id="ofh_supplier_invoice_archived_main_menu">
        <field name="name">Archived</field>
        <field name="parent_id" ref="ofh_supplier_invoice_main_menu"/>
        <field name="sequence" eval="200"/>
    </record>

    <record model="ir.ui.menu" id="ofh_supplier_invoice_line_line_menu">
        <field name="name">Archived Lines</field>
        <field name="parent_id" ref="ofh_supplier_invoice_archived_main_menu"/>
        <field name="action" ref="archived_supplier_invoice_line_act_window"/>
        <field name="sequence" eval="10"/>
    </record>

    <record id="action_invoice_supplier_queue_job" model="ir.actions.act_window">
        <field name="name">Jobs</field>
        <field name="res_model">queue.job</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">
            {'search_default_pending': 1, 'search_default_enqueued': 1, 'search_default_started': 1, 'search_default_failed': 1}
        </field>
        <field name="domain">['|', ('model_name', '=', 'import.record'), ('model_name', '=', 'import.recordset')]</field>
        <field name="view_id" ref="queue_job.view_queue_job_tree"/>
        <field name="search_view_id" ref="queue_job.view_queue_job_search"/>
    </record>

    <record model="ir.ui.menu" id="queue_job_main_menu">
        <field name="name">Background Jobs</field>
        <field name="parent_id" ref="ofh_supplier_invoice_main_menu"/>
        <field name="sequence" eval="90"/>
    </record>

    <record model="ir.ui.menu" id="sale_order_queue_job_menu">
        <field name="name">Import Jobs</field>
        <field name="parent_id" ref="queue_job_main_menu"/>
        <field name="action" ref="action_invoice_supplier_queue_job"/>
        <field name="sequence" eval="10"/>
    </record>


</odoo>
