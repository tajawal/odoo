<odoo>

    <record model="ir.ui.view" id="ofh_payment_gateway_line_form_view">
        <field name="name">ofh.payment.gateway.line.form (in ofh_payment_gateway_line)</field>
        <field name="model">ofh.payment.gateway.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <field name="currency_id" invisible="1"/>
                    <group name="main_info" col="4">
                        <field name="provider"/>
                        <field name="acquirer_bank"/>
                        <field name="payment_method"/>
                        <field name="payment_by"/>
                        <field name="transaction_date"/>
                        <field name="total"/>
                        <field name="payment_status"/>
                        <field name="response_description"/>
                    </group>
                    <group name="references" string="References" col="4">
                        <field name="auth_code"/>
                        <field name="reported_mid"/>
                        <field name="payment_id"/>
                        <field name="track_id"/>
                        <field name="arn"/>
                    </group>
                    <group name="card_details" string="Card Details" col="4">
                        <field name="card_name"/>
                        <field name="card_number"/>
                        <field name="card_bin"/>
                        <field name="card_bank"/>
                        <field name="is_card_mada"/>
                        <field name="is_apple_pay"/>
                        <field name="card_expiry_month"/>
                        <field name="card_expiry_year"/>
                        <field name="cvv_check"/>
                    </group>
                    <group name="customer_details" string="Customer Details" col="4">
                        <field name="customer_email"/>
                        <field name="server_ip"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="ofh_payment_gateway_line_tree_view">
        <field name="name">ofh.payment.gateway.line.tree (in ofh_payment_gateway_line)</field>
        <field name="model">ofh.payment.gateway.line</field>
        <field name="arch" type="xml">
            <tree delete="0">
                <field name="name"/>
                <field name="provider"/>
                <field name="acquirer_bank"/>
                <field name="auth_code"/>
                <field name="currency_id" invisible="1"/>
                <field name="total" widget="monetary"/>
                <field name="payment_status"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="ofh_payment_gateway_line_all_act_window">
        <field name="name">Payment Gateway Lines</field>
        <field name="res_model">ofh.payment.gateway.line</field>
        <field name="view_mode">tree,form,pivot</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

</odoo>
