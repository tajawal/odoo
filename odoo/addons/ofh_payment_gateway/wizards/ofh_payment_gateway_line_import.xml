<odoo>

    <record model="ir.ui.view" id="ofh_payment_gateway_line_import_form_view">
        <field name="name">ofh.payment.gateway.line.import.form (in ofh_payment_gateway_line)</field>
        <field name="model">ofh.payment.gateway.line.import</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="file_type"/>
                    <field name="upload_file" options="{'max_file_size': '100m'}" filename="file_name"/>
                    <field name="file_name" invisible="1"/>
                </group>
                <footer>
                    <button name="import_report"
                            string="Import"
                            class="btn-primary"
                            type="object"/>
                    <button string="Cancel"
                            class="btn-default"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="ofh_payment_gateway_line_import_act_window">
        <field name="name">Ofh Payment Gateway Line Import</field>
        <field name="res_model">ofh.payment.gateway.line.import</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>

</odoo>
