<odoo>

    <record model="ir.ui.view" id="ofh_supplier_invoice_line_form_view">
        <field name="name">ofh.supplier.invoice.line.form (in ofh_sale_order_supplier_invoice_tv)</field>
        <field name="model">ofh.supplier.invoice.line</field>
        <field name="inherit_id" ref="ofh_supplier_invoice_tv.ofh_supplier_invoice_line_form_view"/>
        <field name="arch" type="xml">
            <button name="tv_retrieve_pnr" position="attributes">
                <attribute name="attrs">
                    {'invisible': [('invoice_type', '!=', 'tv'), ('matching_status', '!=', 'unmatched')]}
                </attribute>
            </button>
        </field>
    </record>

</odoo>
