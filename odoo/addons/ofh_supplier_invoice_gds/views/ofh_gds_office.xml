<odoo>

    <record model="ir.ui.view" id="ofh_gds_office_form_view">
        <field name="name">ofh.gds.office.form (in ofh_supplier_invoice_gds)</field>
        <field name="model">ofh.gds.office</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                </group>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="ofh_gds_office_form_tree">
        <field name="name">ofh.gds.office.tree (in ofh_supplier_invoice_gds)</field>
        <field name="model">ofh.gds.office</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="ofh_gds_office_form_act_window">
        <field name="name">Offices</field>
        <field name="res_model">ofh.gds.office</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
    </record>

    <record model="ir.ui.menu" id="ofh_gds_office_main_menu">
        <field name="name">Offices</field>
        <field name="parent_id" ref="ofh_supplier_invoice.ofh_supplier_invoice_main_menu"/>
        <field name="sequence" eval="100"/>
    </record>

    <record model="ir.ui.menu" id="ofh_gds_office_menu">
        <field name="name">Offices</field>
        <field name="parent_id" ref="ofh_gds_office_main_menu"/>
        <field name="action" ref="ofh_gds_office_form_act_window"/>
        <field name="sequence" eval="100"/>
    </record>

</odoo>
