<odoo>

    <record model="ir.ui.view" id="ofh_supplier_invoice_line_form_view">
        <field name="name">ofh.supplier.invoice.line.form (in ofh_supplier_invoice_gds)</field>
        <field name="model">ofh.supplier.invoice.line</field>
        <field name="inherit_id" ref="ofh_supplier_invoice.ofh_supplier_invoice_line_form_view"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page name="gds_fees_details" string="GDS FEES DETAILS" attrs="{'invisible': [('invoice_type', '!=', 'gds')]}">
                    <group name="fees_details" col="4">
                        <field name="gds_base_fare_amount"  widget="monetary"/>
                        <field name="gds_tax_amount"  widget="monetary"/>
                        <field name="gds_net_amount"  widget="monetary"/>
                        <field name="gds_fee_amount"  widget="monetary"/>
                        <field name="gds_iata_commission_amount"  widget="monetary"/>
                    </group>
                </page>
            </notebook>
        </field>
    </record>

    <record model="ir.ui.menu" id="ofh_gds_supplier_invoice_menu">
        <field name="name">GDS Supplier Report</field>
        <field name="parent_id" ref="ofh_supplier_invoice.ofh_supplier_invoice_import_main_menu"/>
        <field name="action" ref="ofh_supplier_invoice_gds.ofh_supplier_invoice_import_act_window"/>
        <field name="sequence" eval="10"/>
    </record>

</odoo>
