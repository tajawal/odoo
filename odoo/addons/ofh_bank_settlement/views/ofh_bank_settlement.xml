<odoo>
    <record model="ir.ui.view" id="ofh_bank_settlement_form_view">
        <field name="name">ofh.bank.settlement.form (in ofh_bank_settlement)</field>
        <field name="model">ofh.bank.settlement</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group name="header" col="4">
                        <field name="created_at"/>
                        <field name="updated_at"/>
                        <field name="name"/>
                        <field name="bank_name"/>
                        <field name="reported_mid"/>
                        <field name="account_number"/>
                        <field name="payment_method"/>
                        <field name="card_type"/>
                        <field name="transaction_date"/>
                        <field name="card_number"/>
                        <field name="gross_transaction_amount"/>
                        <field name="currency_id"/>
                        <field name="reported_merchant_charges"/>
                        <field name="reported_merchant_vat"/>
                        <field name="payment_status"/>
                        <field name="arn"/>
                        <field name="auth_code"/>
                        <field name="is_3d_secure"/>
                        <field name="net_transaction_amount"/>
                        <field name="posting_date"/>
                        <field name="reconciliation_reference_id"/>
                        <field name="full_terminal_number"/>
                        <field name="settlement_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="ofh_bank_settlement_tree_view">
        <field name="name">ofh.bank.settlement.tree (in ofh_bank_settlement)</field>
        <field name="model">ofh.bank.settlement</field>
        <field name="arch" type="xml">
            <tree delete="0">
                <field name="entity"/>
                <field name="name"/>
                <field name="auth_code"/>
                 <field name="currency_id"/>
                <field name="created_at"/>
                <field name="updated_at"/>
                <field name="gross_transaction_amount"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="ofh_bank_settlement_all_act_window">
        <field name="name">Bank Settlements</field>
        <field name="res_model">ofh.bank.settlement</field>
        <field name="view_mode">tree,form,pivot</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.actions.act_window" id="ofh_bank_settlement_almosafer_act_window">
        <field name="name">Bank Settlements</field>
        <field name="res_model">ofh.bank.settlement</field>
        <field name="view_mode">tree,form,pivot</field>
        <field name="domain">[('entity', '=', 'almosafer')]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.actions.act_window" id="ofh_bank_settlement_tajawal_act_window">
        <field name="name">Bank Settlements</field>
        <field name="res_model">ofh.bank.settlement</field>
        <field name="view_mode">tree,form,pivot</field>
        <field name="domain">[('entity', '=', 'tajawal')]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.actions.act_window" id="ofh_bank_settlement_incomplete_act_window">
        <field name="name">Bank Settlements</field>
        <field name="res_model">ofh.bank.settlement</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.ui.menu" id="ofh_bank_settlement_main_menu">
        <field name="name">Bank Settlements</field>
        <field name="sequence" eval="80"/>
    </record>

    <record model="ir.ui.menu" id="ofh_bank_settlement_menu">
        <field name="name">Bank Settlements</field>
        <field name="parent_id" ref="ofh_bank_settlement.ofh_bank_settlement_main_menu"/>
        <field name="sequence" eval="80"/>
    </record>

</odoo>
