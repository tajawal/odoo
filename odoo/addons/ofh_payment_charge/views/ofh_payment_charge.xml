<odoo>

    <record model="ir.ui.view" id="ofh_payment_charge_form_view">
        <field name="name">ofh.payment.charge.form (in ofh_payment_charge)</field>
        <field name="model">ofh.payment.charge</field>
        <field name="arch" type="xml">
            <form create="0" duplicate="0" delete="0">
                <sheet>
                    <group name="general_information" string="General Information" col="4">
                        <field name="charge_id"/>
                        <field name="track_id"/>
                        <field name="created_at"/>
                        <field name="updated_at"/>
                        <field name="total"/>
                        <field name="currency_id"/>
                        <field name="status"/>
                    </group>
                    <group name="card_info" string="Card Details" col="4">
                        <field name="provider"/>
                        <field name="payment_mode"/>
                        <field name="card_type"/>
                        <field name="last_four"/>
                        <field name="auth_code"/>
                        <field name="card_bin"/>
                        <field name="mid"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="ofh_payment_charge_tree_view">
        <field name="name">ofh.payment.charge.tree (in ofh_payment_charge)</field>
        <field name="model">ofh.payment.charge</field>
        <field name="arch" type="xml">
            <tree create="0" duplicate="0" delete="0">
                <field name="currency_id" invisible="1"/>
                <field name="charge_id"/>
                <field name="created_at"/>
                <field name="updated_at"/>
                <field name="provider"/>
                <field name="payment_mode"/>
                <field name="mid"/>
                <field name="auth_code"/>
                <field name="total"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

</odoo>
