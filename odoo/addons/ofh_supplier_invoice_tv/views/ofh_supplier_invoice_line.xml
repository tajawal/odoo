<odoo>
    <record model="ir.actions.act_window" id="tv_supplier_invoice_line_act_window">
        <field name="name">TravelPort lines</field>
        <field name="res_model">ofh.supplier.invoice.line</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('invoice_type', '=', 'tv')]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.ui.menu" id="ofh_supplier_invoice_line_line_menu">
        <field name="name">TravelPort lines</field>
        <field name="parent_id" ref="ofh_supplier_invoice.ofh_supplier_invoice_line_main_menu"/>
        <field name="action" ref="tv_supplier_invoice_line_act_window"/>
        <field name="sequence" eval="20"/>
    </record>

    <record model="ir.ui.menu" id="ofh_tv_supplier_invoice_menu">
        <field name="name">TravelPort Report</field>
        <field name="parent_id" ref="ofh_supplier_invoice.ofh_supplier_invoice_import_main_menu"/>
        <field name="action" ref="ofh_supplier_invoice_tv.ofh_supplier_invoice_import_act_window"/>
        <field name="sequence" eval="10"/>
    </record>

</odoo>
