<odoo>

    <record model="ir.ui.view" id="ofh_payment_request_form_view">
        <field name="name">ofh.payment.request.form (in ofh_payment_request_sap)</field>
        <field name="model">ofh.payment.request</field>
        <field name="inherit_id" ref="ofh_payment_request.ofh_payment_request_form_view"/>
        <field name="arch" type="xml">
            <header position="inside">
                <button name="send_payment_request_to_sap"
                        type="object"
                        confirm="You are about to send this Payment Request to SAP. Are you sure?"
                        string="Send Payment Request to SAP"
                        class="btn-success"/>
            </header>
            <notebook position="inside">
                <page name="integration_details" string="Integration Details">
                    <field name="sap_line_ids" col="2" nolabel="1"/>
                    <group name="sap_conditions" string="SAP Sale Conditions" col="4">
                        <field name="sap_zsel"/>
                        <field name="sap_zdis"/>
                        <field name="sap_zvt1"/>
                        <field name="sap_zvd1"/>
                        <field name="manual_sap_zvd1"/>
                        <field name="manual_sap_zvd1_currency"/>
                    </group>
                    <group name="integration_details" string="SAP Item General" col="4">
                        <field name="sap_pnr"/>
                        <field name="sap_xml_sale_ref"/>
                        <field name="sap_tax_code"/>
                    </group>
                    <group name="integration_details" string="SAP Change Fee Item General" col="4">
                        <field name="sap_change_fee_service_item"/>
                        <field name="sap_change_fee_tax_code"/>
                    </group>

                    <group name="integration_details" string="SAP Change Fee Conditions" col="4">
                        <field name="sap_change_fee_zsel"/>
                        <field name="sap_change_fee_zvt1"/>
                    </group>
                    <group name="sap_conditions" string="SAP Payment details Conditions" col="4">
                        <field name="sap_payment_amount1"/>
                        <field name="sap_payment_amount2"/>
                        <field name="sap_xml_file_ref"/>
                    </group>

                </page>
            </notebook>
        </field>
    </record>

    <!-- Importer Menu -->
    <record id="sap_import_backend_act_window" model="ir.actions.act_window">
        <field name="name">SAP Importers</field>
        <field name="res_model">import.backend</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <!-- TODO: Not strong enough we should find a better way -->
        <field name="domain">[('name', 'in', ['SAP Payment Report Importer', 'SAP Sale Report Importer'])]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.ui.menu" id="import_backend_menu">
        <field name="name">SAP Importers</field>
        <field name="parent_id" ref="ofh_payment_request.import_backend_main_menu"/>
        <field name="action" ref="sap_import_backend_act_window"/>
        <field name="sequence" eval="10"/>
    </record>


    <record model="ir.actions.server" id="ofh_payment_request_send_to_sap">
        <field name="name">Send to SAP</field>
        <field name="model_id" ref="ofh_payment_request.model_ofh_payment_request"/>
        <field name = "binding_model_id" ref = "model_ofh_payment_request"/>
        <field name="state">code</field>
        <field name="code">
if records:
    records.action_send_multiple_payment_requests_to_sap()
        </field>
    </record>

</odoo>
