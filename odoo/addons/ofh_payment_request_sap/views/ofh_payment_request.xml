<odoo>

    <record model="ir.ui.view" id="ofh_payment_request_form_view">
        <field name="name">ofh.payment.request.form (in ofh_payment_request_sap)</field>
        <field name="model">ofh.payment.request</field>
        <field name="inherit_id" ref="ofh_payment_request.ofh_payment_request_form_view"/>
        <field name="arch" type="xml">
            <header position="inside">
                <button name="update_sap_xml_details"
                        type="object"
                        string="Update Integration Details"
                        class="button-primary"/>
                <button name="send_payment_request_to_sap"
                        type="object"
                        confirm="You are about to send this Payment Request to SAP. Are you sure?"
                        string="Send Payment Request to SAP"
                        class="button-danger"/>
            </header>
            <group name="status_details" position="inside">
                <field name="sap_status"/>
                <field name="integration_status"/>
            </group>
            <notebook position="inside">
                <page name="integration_details" string="Integration Details">
                    <group name="sap_conditions" string="SAP Sale Conditions" col="4">
                        <field name="sap_zsel"/>
                        <field name="sap_zdis"/>
                        <field name="sap_zvt1"/>
                        <field name="sap_zvd1"/>
                    </group>
                    <group name="integration_details" string="SAP Item General" col="4">
                        <field name="sap_pnr"/>
                        <field name="sap_xml_sale_ref"/>
                    </group>
                    <group name="sap_conditions" string="SAP Payment details Conditions" col="4">
                        <field name="sap_payment_amount1"/>
                        <field name="sap_payment_amount2"/>
                        <field name="sap_xml_file_ref"/>
                        <field name="transaction_type"/>
                    </group>

                </page>
            </notebook>
        </field>
    </record>

    <record model="ir.ui.view" id="ofh_payment_request_search_view">
        <field name="name">ofh.payment.request.search (in ofh_payment_request_sap)</field>
        <field name="model">ofh.payment.request</field>
        <field name="inherit_id" ref="ofh_payment_request.ofh_payment_request_search_view"/>
        <field name="arch" type="xml">
            <search position="inside">
                <!-- SAP Status -->
                <separator/>
                <filter name="pending_sap" string="Pending" domain="[('sap_status', '=', 'pending')]"/>
                <filter name="in_sap" string="Sale and Payment in SAP" domain="[('sap_status', '=', 'in_sap')]"/>
                <filter name="payment_not_in_sap" string="Payment not in SAP" domain="[('sap_status', '=', 'payment_not_in_sap')]"/>
                <filter name="sale_not_in_sap" string="Sale not in SAP" domain="[('sap_status', '=', 'sale_not_in_sap')]"/>
                <filter name="not_in_sap" string="Not In SAP" domain="[('sap_status', '=', 'not_in_sap')]"/>
                <separator/>
                <filter name="not_sent_through_integration" string="No Sent through integration" domain="[('integration_status', '=', 'not_sent')]"/>
                <filter name="sale_sent_through_integration" string="Sale Sent through integration" domain="[('integration_status', '=', 'sale_sent')]"/>
                <filter name="payment_sent_through_integration" string="Payment Sent through integration" domain="[('integration_status', '=', 'payment_sent')]"/>
                <filter name="sent_through_integration" string="Sale and payment Sent through integration" domain="[('integration_status', '=', 'sale_payment_sent')]"/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="ofh_payment_request_tree_view">
        <field name="name">ofh.payment.request.tree (in ofh_payment_request_sap)</field>
        <field name="model">ofh.payment.request</field>
        <field name="inherit_id" ref="ofh_payment_request.ofh_payment_request_tree_view"/>
        <field name="arch" type="xml">
            <field name="reconciliation_status" position="before">
                <field name="integration_status"/>
                <field name="sap_status"/>
            </field>
        </field>
    </record>

    <!-- Importer Menu -->
    <record id="sap_import_backend_act_window" model="ir.actions.act_window">
        <field name="name">SAP Importers</field>
        <field name="res_model">import.backend</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <!-- TODO: Not strong enough we should find a better way -->
        <field name="domain">[('name', 'in', ['SAP Payment Report Importer', 'SAP Sale Report Importer'])]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.ui.menu" id="import_backend_menu">
        <field name="name">SAP Importers</field>
        <field name="parent_id" ref="ofh_payment_request.import_backend_main_menu"/>
        <field name="action" ref="sap_import_backend_act_window"/>
        <field name="sequence" eval="10"/>
    </record>


    <record model="ir.actions.server" id="ofh_payment_request_send_to_sap">
        <field name="name">Send to SAP</field>
        <field name="model_id" ref="ofh_payment_request.model_ofh_payment_request"/>
        <field name = "binding_model_id" ref = "model_ofh_payment_request"/>
        <field name="state">code</field>
        <field name="code">
if records:
    records.action_send_multiple_payment_requests_to_sap()
        </field>
    </record>

</odoo>
