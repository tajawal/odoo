<odoo>

    <record model="ir.ui.view" id="ofh_payment_request_integration_update_form_view">
        <field name="name">ofh.payment.request.integration.update.form (in ofh_payment_request_sap)</field>
        <field name="model">ofh.payment.request.integration.update</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <div>
                        <p>In order to do SAP check status we have to update the payment request in the system 
                        with Integration details from SAP-XML-API.</p>
                        <p>Click Update button to update the payment requests with the correct Order reference and file ID.</p>
                    </div>
                </group>
                <footer>
                    <button name="update_integration_details"
                            string="Update"
                            class="btn-primary"
                            type="object"/>
                    <button string="Cancel"
                            class="btn-default"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="ofh_payment_request_integration_update_act_window">
        <field name="name">Synchronize Integration Details</field>
        <field name="res_model">ofh.payment.request.integration.update</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>


    <record model="ir.ui.menu" id="ofh_payment_request_integration_update_menu">
        <field name="name">Synchronize Integration</field>
        <field name="parent_id" ref="ofh_payment_request.payment_request_actions_main_menu"/>
        <field name="action" ref="ofh_payment_request_integration_update_act_window"/>
        <field name="sequence" eval="10"/>
    </record>

</odoo>
