<odoo>
    <record model="ir.ui.menu" id="ofh_checkout_payment_gateway_import_menu">
        <field name="name">Checkout Report</field>
        <field name="parent_id" ref="ofh_payment_gateway.ofh_payment_gateway_import_main_menu"/>
        <field name="action" ref="ofh_payment_gateway_checkout.ofh_payment_gateway_import_act_window"/>
        <field name="sequence" eval="30"/>
    </record>

    <record model="ir.actions.act_window" id="ofh_payment_gateway_menu">
        <field name="name">Checkout Payment Gateways</field>
        <field name="res_model">ofh.payment.gateway</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('provider', '=', 'checkout')]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.ui.menu" id="ofh_checkout_payment_gateway_line_menu">
        <field name="name">Checkout Payment Gateways</field>
        <field name="parent_id" ref="ofh_payment_gateway.all_payment_gateway_menu"/>
        <field name="action" ref="ofh_payment_gateway_menu"/>
        <field name="sequence" eval="40"/>
    </record>

</odoo>
