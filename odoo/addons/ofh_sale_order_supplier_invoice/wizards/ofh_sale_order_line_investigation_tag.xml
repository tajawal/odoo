<odoo>

    <record model="ir.ui.view" id="ofh_sale_order_line_investigation_tag_form_view">
        <field name="name">ofh.sale.order.line.investigation.tag.form (in ofh_sale_order_supplier_invoice)</field>
        <field name="model">ofh.sale.order.line.investigation.tag</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="line_ids" invisible="1"/>
                    <field name="investigation_tag"/>
                </group>
                <footer>
                    <button name="action_update_investigation_tag"
                            string="Save"
                            class="btn-primary"
                            type="object"/>
                    <button string="Cancel"
                            class="btn-default"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="ofh_sale_order_line_act_window">
        <field name="name">Unmatch Tag</field>
        <field name="res_model">ofh.sale.order.line.investigation.tag</field>
        <field name="view_mode">form</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="ofh_sale_order_line_investigation_tag_form_view"/>
        <field name="binding_model_id" ref="model_ofh_sale_order_line"/>
        <field name="target">new</field>
    </record>

    <record model="ir.actions.act_window" id="ofh_sale_order_act_window">
        <field name="name">Unmatch Tag</field>
        <field name="res_model">ofh.sale.order.line.investigation.tag</field>
        <field name="view_mode">form</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="ofh_sale_order_line_investigation_tag_form_view"/>
        <field name="binding_model_id" ref="model_ofh_sale_order"/>
        <field name="target">new</field>
    </record>

</odoo>
