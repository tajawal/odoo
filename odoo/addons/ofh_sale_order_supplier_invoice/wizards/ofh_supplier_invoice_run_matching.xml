<odoo>

    <record model="ir.ui.view" id="ofh_supplier_invoice_run_matching_form_view">
        <field name="name">ofh.supplier.invoice.run.matching.form (in ofh_payment_request_invoice)</field>
        <field name="model">ofh.supplier.invoice.run.matching</field>
        <field name="arch" type="xml">
            <form string="Ofh Supplier Invoice Run Matching">
                <group>
                    <div>
                        <p>Run the matching of the invoice lines agains the payment requests.</p>
                    </div>
                </group>
                <footer>
                    <button name="match_supplier_invoice_lines"
                            string="Match"
                            class="btn-primary"
                            type="object"/>
                    <button string="Cancel"
                            class="btn-default"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="ofh_supplier_invoice_run_matching_act_window">
        <field name="name">Supplier Invoices</field>
        <field name="res_model">ofh.supplier.invoice.run.matching</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>


    <record model="ir.ui.menu" id="ofh_payment_request_run_matching_menu">
        <field name="name">Invoices Matching</field>
        <field name="parent_id" ref="ofh_payment_request.payment_request_actions_main_menu"/>
        <field name="action" ref="ofh_supplier_invoice_run_matching_act_window"/>
        <field name="sequence" eval="20"/>
    </record>

    <record model="ir.ui.menu" id="ofh_supplier_invoice_run_matching_menu">
        <field name="name">Invoices Matching</field>
        <field name="parent_id" ref="ofh_supplier_invoice.ofh_supplier_invoice_actions_main_menu"/>
        <field name="action" ref="ofh_supplier_invoice_run_matching_act_window"/>
        <field name="sequence" eval="10"/>
    </record>

</odoo>
