<odoo>

    <record model="ir.ui.view" id="ofh_sale_order_line_form_view">
        <field name="name">ofh.sale.order.line.form (in ofh_sale_order_supplier_invoice)</field>
        <field name="model">ofh.sale.order.line</field>
        <field name="inherit_id" ref="ofh_sale_order.ofh_sale_order_line_form_view"/>
        <field name="arch" type="xml">
            <group name="line_statuses" position="inside">
                <field name="investigation_tag"/>
                <field name="reconciliation_status"/>
                <field name="reconciliation_tag"/>
            </group>
            <page name="cost_details" position="inside">
                <field name="invoice_line_ids" nolabel="1">
                    <tree create="0" edit="0" delete="0">
                        <field name="order_id" invisible="1"/>
                        <field name="invoice_type"/>
                        <field name="invoice_date"/>
                        <field name="invoice_status"/>
                        <field name="ticket_number"/>
                        <field name="locator"/>
                        <field name="currency_id" invisible="1"/>
                        <field name="total" widget="monetary"/>
                        <field name="gds_net_amount"/>
                        <button name="%(ofh_supplier_invoice_force_match_act_window)d"
                                type="action"
                                string="Force match"
                                class="btn-success"/>
                        <button name="action_unlink_invoice"
                                type="object"
                                class="btn-danger"
                                string="Unlink"/>
                    </tree>
                </field>
            </page>
        </field>
    </record>

    <record model="ir.ui.view" id="ofh_sale_order_line_tree_view">
        <field name="name">ofh.sale.order.line.tree (in ofh_sale_order_supplier_invoice)</field>
        <field name="model">ofh.sale.order.line</field>
        <field name="inherit_id" ref="ofh_sale_order.ofh_sale_order_line_tree_view"/>
        <field name="arch" type="xml">
            <tree position="inside">
                <field name="investigation_tag"/>
                <field name="reconciliation_status"/>
            </tree>
        </field>
    </record>

</odoo>
