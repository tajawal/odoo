<odoo>

    <record model="ir.ui.view" id="ofh_supplier_invoice_line_form_view">
        <field name="name">ofh.supplier.invoice.line.form (in ofh_sale_order_supplier_invoice)</field>
        <field name="model">ofh.supplier.invoice.line</field>
        <field name="inherit_id" ref="ofh_supplier_invoice.ofh_supplier_invoice_line_form_view"/>
        <field name="arch" type="xml">
            <header position="inside">
                <button name="action_unused_tickets_invoice_lines"
                        string="Mark as Unused Ticket"
                        class="btn-primary"
                        type="object"
                        attrs="{'invisible': [('invoice_type', 'not in', ('gds', 'tf', 'galileo'))]}"/>
            </header>
            <group name="main_group" position="inside">
                <field name="order_id"/>
                <field name="order_line_id"/>
            </group>
            <group name="main_group" position="after">
                <group name="status_group" col="4">
                    <field name="matching_status"/>
                    <field name="reconciliation_status"/>
                </group>
            </group>
        </field>
    </record>

    <record model="ir.ui.view" id="ofh_supplier_invoice_line_search_view">
        <field name="name">ofh.supplier.invoice.line.search (in ofh_sale_order_supplier_invoice)</field>
        <field name="model">ofh.supplier.invoice.line</field>
        <field name="inherit_id" ref="ofh_supplier_invoice.ofh_supplier_invoice_line_search_view"/>
        <field name="arch" type="xml">
            <field name="ticket_number" position="after">
                <field name="order_id"/>
                <field name="order_line_id"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="ofh_supplier_invoice_line_tree_view">
        <field name="name">ofh.supplier.invoice.line.tree (in ofh_sale_order_supplier_invoice)</field>
        <field name="model">ofh.supplier.invoice.line</field>
        <field name="inherit_id" ref="ofh_supplier_invoice.ofh_supplier_invoice_line_tree_view"/>
        <field name="arch" type="xml">
            <field name="locator" position="after">
                <field name="order_id"/>
            </field>
            <tree position="inside">
                <field name="matching_status"/>
                <field name="reconciliation_status"/>
            </tree>
        </field>
    </record>

    <!-- Mark Invoice Lines as not applicable -->
    <record model="ir.actions.server" id="ofh_supplier_invoice_line_not_applicable">
        <field name="name">Mark as Unused Ticket</field>
        <field name="model_id" ref="ofh_supplier_invoice.model_ofh_supplier_invoice_line"/>
        <field name = "binding_model_id" ref = "ofh_supplier_invoice.model_ofh_supplier_invoice_line"/>
        <field name="state">code</field>
        <field name="code">
if records:
    records.action_unused_tickets_invoice_lines()
        </field>
    </record>

</odoo>
