<odoo>

    <record model="ir.ui.view" id="ofh_sale_order_form_view">
        <field name="name">ofh.sale.order.form (in ofh_sale_order_supplier_invoice)</field>
        <field name="model">ofh.sale.order</field>
        <field name="inherit_id" ref="ofh_sale_order.ofh_sale_order_form_view"/>
        <field name="arch" type="xml">
            <header position="inside">
                 <button name="action_open_invoice_lines_with_pnr"
                        string="Open Invoices"
                        help="Open invoices that match the same supplier references in the order."
                        type="object"/>
            </header>
            <xpath expr="//field[@name='line_ids']/tree" position="inside">
                <field name="reconciliation_status"/>
            </xpath>
            <group name="statuses" position="inside">
                <field name="order_reconciliation_status"/>
            </group>
            <page name="costs" position="inside">
                <group name="invoice_lines" string="Invoices">
                    <field name="invoice_line_ids" nolabel="1">
                        <tree create="0" edit="0" delete="0">
                            <field name="order_id" invisible="1"/>
                            <field name="invoice_type"/>
                            <field name="invoice_date"/>
                            <field name="invoice_status"/>
                            <field name="ticket_number"/>
                            <field name="locator"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="total" widget="monetary"/>
                            <field name="gds_net_amount"/>
                            <field name="matching_status"/>
                            <field name="reconciliation_status"/>
                            <button name="%(ofh_supplier_invoice_force_match_act_window)d"
                                    type="action"
                                    string="Force match"
                                    class="btn-success"/>
                            <button name="action_unlink_invoice"
                                    type="object"
                                    class="btn-danger"
                                    string="Unlink"/>
                        </tree>
                    </field>
                </group>
            </page>
        </field>
    </record>

    <record model="ir.ui.view" id="ofh_sale_order_tree_view">
        <field name="name">ofh.sale.order.tree (in ofh_sale_order_supplier_invoice)</field>
        <field name="model">ofh.sale.order</field>
        <field name="inherit_id" ref="ofh_sale_order.ofh_sale_order_tree_view"/>
        <field name="arch" type="xml">
            <tree position="inside">
                <field name="order_reconciliation_status"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="ofh_sale_order_search_view">
        <field name="name">ofh.sale.order.search (in ofh_sale_order_supplier_invoice)</field>
        <field name="model">ofh.sale.order</field>
        <field name="inherit_id" ref="ofh_sale_order.ofh_sale_order_search_view"/>
        <field name="arch" type="xml">
            <search position="inside">
                <separator/>
                <filter name="order_reconciled_status" string="Order Reconciled" domain="[('order_reconciliation_status', '=', 'reconciled')]"/>
                <filter name="order_unreconciled_status" string="Order Unreconciled" domain="[('order_reconciliation_status', '=', 'unreconciled')]"/>
                <filter name="order_na_reco_status" string="Order Not Applicable" domain="[('order_reconciliation_status', '=', 'not_applicable')]"/>
                <separator/>
                <filter name="payment_request_reconciled_status" string="Payment Request Reconciled" domain="[('payment_request_reconciliation_status', '=', 'reconciled')]"/>
                <filter name="payment_request_unreconciled_status" string="Payment Request Unreconciled" domain="[('payment_request_reconciliation_status', '=', 'unreconciled')]"/>
                <filter name="pr_na_reco_status" string="Payment Request N/A" domain="[('payment_request_reconciliation_status', '=', 'not_applicable')]"/>
            </search>
        </field>
    </record>

</odoo>
