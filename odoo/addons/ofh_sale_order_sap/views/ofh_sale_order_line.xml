<odoo>

   <record model="ir.ui.view" id="ofh_sale_order_line_search_view">
        <field name="name">ofh.sale.order.line.search (in ofh_sale_order_line_sap)</field>
        <field name="model">ofh.sale.order.line</field>
        <field name="inherit_id" ref="ofh_sale_order.ofh_sale_order_line_search_view"/>
        <field name="arch" type="xml">
            <search position="inside">
                <separator/>
                <filter name="order_failing_reason" string="Hotel Skipped Lines" domain="[('line_type', '=', 'hotel'),('sap_failing_reason', '=', 'skipped')]"/>
            </search>
        </field>
    </record>

</odoo>
