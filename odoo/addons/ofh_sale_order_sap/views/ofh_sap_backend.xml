<odoo>

    <record model="ir.ui.view" id="sap_backend_form_view">
        <field name="name">sap.backend.form (in ofh_sap_connector)</field>
        <field name="model">sap.backend</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="SAP BACKEND NAME" nolabel="1"/></h1>
                    </div>
                    <group name="sap" string="SAP DETAILS">
                        <field name="sap_xml_api_url"/>
                    </group>
                </sheet>
                <div class="oe_chatter"></div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="sap_backend_tree_view">
        <field name="name">sap.backend.tree (in ofh_sap_connector)</field>
        <field name="model">sap.backend</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="sap_xml_api_url"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="sap_backend_act_window">
        <field name="name">Backends</field>
        <field name="res_model">sap.backend</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.ui.menu" id="sap_connector_main_menu">
        <field name="name">SAP</field>
        <field name="parent_id" ref="connector.menu_connector_root"/>
        <field name="sequence" eval="20"/>
    </record>

    <record model="ir.ui.menu" id="sap_backend_menu">
        <field name="name">Backends</field>
        <field name="parent_id" ref="sap_connector_main_menu"/>
        <field name="action" ref="sap_backend_act_window"/>
        <field name="sequence" eval="10"/>
    </record>

</odoo>
