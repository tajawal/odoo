<odoo>
    <record model="ir.ui.view" id="ofh_sale_order_sap_form_view">
        <field name="name">ofh.sale.order.sap.form (in ofh_sale_order_sap)</field>
        <field name="model">ofh.sale.order.sap</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group name="header" col="4" string="SAP Header">
                        <field name="system_id"/>
                        <field name="sales_type"/>
                        <field name="collection_mode"/>
                        <field name="booking_entity"/>
                        <field name="booking_number"/>
                        <field name="sales_office"/>
                        <field name="channel"/>
                        <field name="customer"/>
                        <field name="file_id"/>
                        <field name="booking_date"/>
                        <field name="fe_indicator"/>
                        <field name="invoice_currency"/>
                        <field name="tapro_invoice_number"/>
                    </group>
                    <notebook>
                        <page name="sale_lines" string="SAP Lines">
                            <group name="sale_lines">
                                <field name="sap_line_ids" nolabel="1">
                                    <tree delete="0" create="0" edit="0">
                                        <field name="pax_name"/>
                                        <field name="pnr"/>
                                        <field name="ticket_number"/>
                                        <field name="iata_number"/>
                                        <field name="plant"/>
                                        <field name="vendor"/>
                                        <field name="zsel"/>
                                        <field name="zvd1"/>
                                        <field name="zvt1"/>
                                        <field name="zdis"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page name="sale_payments" string="SAP Payments">
                            <group name="sale_payments">
                                <field name="sap_payment_ids" nolabel="1">
                                </field>
                            </group>
                        </page>
                        <page name="sap_xml" string="SAP XML">
                            <group name="sap_xml">
                                <field name="sap_xml" widget="ace" options="{'mode': 'xml'}" nolabel="1"/>
                            </group>
                        </page>
                    </notebook>
                    <group name="response" string="SAP Response">
                        <field name="failing_reason"/>
                        <field name="failing_text"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="ofh_sale_order_sap_search_view">
        <field name="name">ofh.sale.order.sap.search (in ofh_sale_order_sap)</field>
        <field name="model">ofh.sale.order.sap</field>
        <field name="arch" type="xml">
            <search>
                <separator/>
                <filter name="domestic_ksa" string="Domestic KSA"
                        domain="[('sap_line_ids.is_domestic_ksa', '=', True)]"/>
                <separator/>
                <filter name="tajawal" string="Tajawal" domain="[('sale_order_id.entity', '=', 'tajawal')]"/>
                <filter name="almosafer" string="Almosafer" domain="[('sale_order_id.entity', '=', 'almosafer')]"/>
                <filter name="egypt" string="Egypt" domain="[('sale_order_id.is_egypt', '=', True)]"/>
                <separator/>
                <filter name="send_this_month" string="Send This month"
                        domain="[('send_date', '&gt;=', context_today().strftime('%%Y-%%m-01'))]"/>
                <filter name="send_last_month" string="Send last month"
                        domain="['&amp;', ('send_date', '&gt;=', (context_today() - relativedelta(months=1)).strftime('%%Y-%%m-01')), ('send_date', '&lt;', context_today().strftime('%%Y-%%m-01'))]"/>
                <separator/>
                <filter name="hotel" string="Hotel" domain="[('sale_order_id.order_type', '=', 'hotel')]"/>
                <filter name="flight" string="Flight" domain="[('sale_order_id.order_type', '=', 'flight')]"/>
                <separator/>
                <filter name="order_matched_status" string="Order Matched"
                        domain="[('sale_order_id.order_matching_status', '=', 'matched')]"/>
                <filter name="order_not_applicable_status" string="Order Not Applicable"
                        domain="[('sale_order_id.order_matching_status', '=', 'not_applicable')]"/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="ofh_sale_order_sap_tree_view">
        <field name="name">ofh.sale.order.sap.tree (in ofh_sale_order_sap)</field>
        <field name="model">ofh.sale.order.sap</field>
        <field name="arch" type="xml">
            <tree>
                <field name="entity"/>
                <field name="sale_order_id"/>
                <field name="payment_request_id"/>
                <field name="send_date"/>
                <field name="order_reconciliation_status"/>
                <field name="sales_type"/>
                <field name="sales_office"/>
                <field name="customer"/>
                <field name="file_id"/>
                <field name="booking_entity"/>
                <field name="is_refund"/>
                <field name="sap_status"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.menu" id="ofh_sale_order_sap_menu">
        <field name="name">Sales Orders SAP</field>
        <field name="parent_id" ref="ofh_sale_order.ofh_sale_order_main_menu"/>
        <field name="action" ref="ofh_sale_order_sap_act_window"/>
        <field name="sequence" eval="40"/>
    </record>
    <record model="ir.actions.act_window" id="ofh_sale_order_sap_act_window">
        <field name="name">Sales Orders SAP</field>
        <field name="res_model">ofh.sale.order.sap</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
    <record model="ir.actions.act_window" id="ofh_sale_order_sap_almosafer_act_window">
        <field name="name">Sales Orders SAP</field>
        <field name="res_model">ofh.sale.order.sap</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('sale_order_id.entity', '=', 'almosafer')]</field>
    </record>

    <record model="ir.actions.act_window" id="ofh_sale_order_sap_tajawal_act_window">
        <field name="name">Sales Orders SAP</field>
        <field name="res_model">ofh.sale.order.sap</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('sale_order_id.entity', '=', 'tajawal')]</field>
    </record>

    <record model="ir.ui.menu" id="ofh_sale_order_sap_all_menu">
        <field name="name">All Sales Orders SAP</field>
        <field name="parent_id" ref="ofh_sale_order_sap_menu"/>
        <field name="action" ref="ofh_sale_order_sap_act_window"/>
        <field name="sequence" eval="10"/>
    </record>

    <record model="ir.ui.menu" id="ofh_sale_order_sap_almosafer_menu">
        <field name="name">Almosafer Sales Orders SAP</field>
        <field name="parent_id" ref="ofh_sale_order_sap_menu"/>
        <field name="action" ref="ofh_sale_order_sap_almosafer_act_window"/>
        <field name="sequence" eval="20"/>
        <field name="domain">[('sale_order_id.entity', '=', 'almosafer')]</field>
    </record>

    <record model="ir.ui.menu" id="ofh_sale_order_sap_tajawal_menu">
        <field name="name">Tajawal Sales Orders SAP</field>
        <field name="parent_id" ref="ofh_sale_order_sap_menu"/>
        <field name="action" ref="ofh_sale_order_sap_tajawal_act_window"/>
        <field name="sequence" eval="30"/>
        <field name="domain">[('sale_order_id.entity', '=', 'tajawal')]</field>
    </record>

    <record model="ir.actions.act_window" id="ofh_sale_order_sap_line_act_window">
        <field name="name">Sales Order Lines SAP</field>
        <field name="res_model">ofh.sale.order.line.sap</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
</odoo>
