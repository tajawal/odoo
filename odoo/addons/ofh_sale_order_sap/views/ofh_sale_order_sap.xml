<odoo>

    <record model="ir.ui.view" id="ofh_sale_order_sap_form_view">
        <field name="name">ofh.sale.order.sap.form (in ofh_sale_order_sap)</field>
        <field name="model">ofh.sale.order.sap</field>
        <field name="arch" type="xml">
            <form edit="0" create="0" delete="0">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group name="main_group" col="4">
                        <field name="sale_order_id"/>
                        <field name="payment_request_id"/>
                        <field name="state"/>
                        <field name="payment_state"/>
                        <field name="sap_status"/>
                        <field name="payment_sap_status"/>
                    </group>
                    <group name="header" col="4" string="SAP Header">
                        <field name="system_id"/>
                        <field name="sales_type"/>
                        <field name="collection_mode"/>
                        <field name="booking_entity"/>
                        <field name="booking_number"/>
                        <field name="sales_office"/>
                        <field name="channel"/>
                        <field name="customer"/>
                        <field name="file_id"/>
                        <field name="booking_date"/>
                        <field name="fe_indicator"/>
                        <field name="invoice_currency"/>
                        <field name="tapro_invoice_number"/>
                    </group>
                    <notebook>
                        <page name="sale_lines" string="SAP Lines">
                            <group name="sale_lines">
                                <field name="sap_line_ids" nolabel="1">
                                    <tree delete="0" create="0" edit="0">
                                        <field name="pax_name"/>
                                        <field name="pnr"/>
                                        <field name="ticket_number"/>
                                        <field name="iata_number"/>
                                        <field name="plant"/>
                                        <field name="vendor"/>
                                        <field name="zsel"/>
                                        <field name="zvd1"/>
                                        <field name="zvt1"/>
                                        <field name="zdis"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page name="sale_payments" string="SAP Payments">
                            <group name="sale_payments">
                                <field name="sap_payment_ids" nolabel="1">
                                </field>
                            </group>
                        </page>
                        <page name="sap_xml" string="SAP XML">
                            <group name="sap_xml">
                                <field name="sap_xml" widget="ace" options="{'mode': 'xml'}" nolabel="1"/>
                            </group>
                        </page>
                    </notebook>
                    <group name="response" string="SAP Response">
                        <field name="failing_reason"/>
                        <field name="failing_text"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="ofh_sale_order_sap_search_view">
        <field name="name">ofh.sale.order.sap.search (in ofh_sale_order_sap)</field>
        <field name="model">ofh.sale.order.sap</field>
        <field name="arch" type="xml">
            <search>
                <field name="display_name"
                       filter_domain="['|', ('sale_order_id.name','ilike', self), ('payment_request_id.track_id','ilike', self)]"
                       string="Order/Payment Request"/>
                <separator/>
                <filter name="domestic_ksa" string="Domestic KSA"
                        domain="[('sap_line_ids.is_domestic_ksa', '=', True)]"/>
                <separator/>
                <filter name="tajawal" string="Tajawal" domain="['|', ('sale_order_id.entity', '=', 'tajawal'), ('payment_request_id.order_id.entity', '=', 'tajawal')]"/>
                <filter name="almosafer" string="Almosafer" domain="['|', ('sale_order_id.entity', '=', 'almosafer'), ('payment_request_id.order_id.entity', '=', 'almosafer')]"/>
                <filter name="egypt" string="Egypt" domain="['|', ('sale_order_id.is_egypt', '=', True), ('payment_request_id.order_id.is_egypt', '=', True)]"/>
                <separator/>
                <filter name="success_state" string="Success" domain="[('state', '=', 'success')]"/>
                <filter name="failed_state" string="Failed" domain="[('state', '=', 'failed')]"/>
                <filter name="visualize_state" string="Simulation" domain="[('state', '=', 'visualize')]"/>
                <separator/>
                <filter name="skipped" string="Skipped" domain="[('failing_reason', '=', 'skipped')]"/>
                <filter name="error" string="Error" domain="[('failing_reason', '=', 'error')]"/>
                <separator/>
                <filter name="sent_this_month" string="Sent This month"
                        domain="[('send_date', '&gt;=', context_today().strftime('%%Y-%%m-01'))]"/>
                <filter name="sent_this_week" string="Sent this week"
                        domain="['&amp;', ('send_date', '&gt;=', (context_today() - relativedelta(days=7)).strftime('%Y-%m-%d')), ('send_date', '&lt;=', context_today().strftime('%Y-%m-%d'))]"/>
                <separator/>
                <filter name="hotel" string="Hotel" domain="['|', ('sale_order_id.order_type', '=', 'hotel'), ('payment_request_id.order_id.order_type', '=', 'hotel')]"/>
                <filter name="flight" string="Flight" domain="['|', ('sale_order_id.order_type', '=', 'flight'), ('payment_request_id.order_id.order_type', '=', 'flight')]"/>
                <separator/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="ofh_sale_order_sap_tree_view">
        <field name="name">ofh.sale.order.sap.tree (in ofh_sale_order_sap)</field>
        <field name="model">ofh.sale.order.sap</field>
        <field name="arch" type="xml">
            <tree edit="0" create="0" delete="0">
                <field name="entity"/>
                <field name="display_name" string="Order/Payment Request"/>
                <field name="send_date"/>
                <field name="sales_type"/>
                <field name="sales_office"/>
                <field name="state"/>
                <field name="failing_reason"/>
                <field name="sap_status"/>
                <field name="payment_sap_status"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.menu" id="ofh_sale_order_sap_menu">
        <field name="name">Sales Orders SAP</field>
        <field name="parent_id" ref="ofh_sale_order.ofh_sale_order_main_menu"/>
        <field name="sequence" eval="40"/>
    </record>

    <record model="ir.actions.act_window" id="ofh_sale_order_sap_act_window">
        <field name="name">Sales Orders SAP</field>
        <field name="res_model">ofh.sale.order.sap</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{'search_default_failed_state': 1, 'search_default_sent_this_week': 1}</field>
    </record>

    <record model="ir.ui.menu" id="ofh_sale_order_sap_all_menu">
        <field name="name">SAP Sales Orders</field>
        <field name="parent_id" ref="ofh_sale_order_sap_menu"/>
        <field name="action" ref="ofh_sale_order_sap_act_window"/>
        <field name="sequence" eval="10"/>
    </record>

    <!-- SAP Export JOBS -->
    <record id="action_sap_sale_order_queue_job" model="ir.actions.act_window">
        <field name="name">Jobs</field>
        <field name="res_model">queue.job</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">
            {'search_default_pending': 1, 'search_default_enqueued': 1, 'search_default_started': 1, 'search_default_failed': 1}
        </field>
        <field name="domain">[('model_name', '=', 'ofh.sale.order.sap')]</field>
        <field name="view_id" ref="queue_job.view_queue_job_tree"/>
        <field name="search_view_id" ref="queue_job.view_queue_job_search"/>
    </record>

    <record id="action_sap_payment_queue_job" model="ir.actions.act_window">
        <field name="name">Jobs</field>
        <field name="res_model">queue.job</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">
            {'search_default_pending': 1, 'search_default_enqueued': 1, 'search_default_started': 1, 'search_default_failed': 1}
        </field>
        <field name="domain">[('model_name', '=', 'ofh.payment.sap')]</field>
        <field name="view_id" ref="queue_job.view_queue_job_tree"/>
        <field name="search_view_id" ref="queue_job.view_queue_job_search"/>
    </record>

    <record model="ir.ui.menu" id="sap_sale_order_queue_job_menu">
        <field name="name">SAP Sale Order Jobs</field>
        <field name="parent_id" ref="ofh_sale_order.queue_job_main_menu"/>
        <field name="action" ref="action_sap_sale_order_queue_job"/>
        <field name="sequence" eval="20"/>
    </record>

    <record model="ir.ui.menu" id="sap_payment_queue_job_menu">
        <field name="name">SAP Payment Jobs</field>
        <field name="parent_id" ref="ofh_sale_order.queue_job_main_menu"/>
        <field name="action" ref="action_sap_payment_queue_job"/>
        <field name="sequence" eval="30"/>
    </record>

    <record model="ir.ui.menu" id="ofh_action_sale_order_main_menu">
        <field name="name">Actions</field>
        <field name="parent_id" ref="ofh_sale_order.ofh_sale_order_main_menu"/>
        <field name="sequence" eval="40"/>
    </record>

    <!-- Importer Menu -->
    <record id="sap_import_backend_act_window" model="ir.actions.act_window">
        <field name="name">SAP Importers</field>
        <field name="res_model">import.backend</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <!-- TODO: Not strong enough we should find a better way -->
        <field name="domain">[('name', 'in', ['New SAP Payment Report Importer', 'New SAP Sale Report Importer'])]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.ui.menu" id="import_backend_menu">
        <field name="name">SAP Importers</field>
        <field name="parent_id" ref="ofh_action_sale_order_main_menu"/>
        <field name="action" ref="sap_import_backend_act_window"/>
        <field name="sequence" eval="20"/>
    </record>

</odoo>
