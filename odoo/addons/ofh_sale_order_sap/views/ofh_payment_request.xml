<odoo>

    <record model="ir.ui.view" id="ofh_payment_request_form_view">
        <field name="name">ofh.payment.request.form (in ofh_sale_order_sap)</field>
        <field name="model">ofh.payment.request</field>
        <field name="inherit_id" ref="ofh_payment_request.ofh_payment_request_form_view"/>
        <field name="arch" type="xml">
            <header position="inside">
                <button name="visualize_sap_order"
                        string="Visualize SAP Order"
                        help="Simualate the sending of an order to SAP."
                        class="btn-info"
                        type="object"/>
                <button name="force_send_payment_request_order_to_sap"
                        string="Force Send Order to SAP"
                        class="btn-danger"
                        help="Send to Sap-xml-api and get and object in return."
                        confirm="You are about to force send this payment request (ONLY SALE PART). Are you sure?"
                        type="object"/>
                <button name="force_send_payment_of_payment_request_to_sap"
                        string="Force Send Payment to SAP"
                        class="btn-warning"
                        help="Send to Sap-xml-api and get and object in return."
                        confirm="You are about to force send this payment request (ONLY PAYMENT PART). Are you sure?"
                        type="object"/>
            </header>
            <group name="status_details" position="inside">
                <field name="new_integration_status"/>
                <field name="new_payment_integration_status"/>
                <field name="new_sap_status"/>
                <field name="new_payment_sap_status"/>
            </group>
            <notebook position="inside">
                <page name="sap_details" string="SAP Details">
                    <field name="sap_order_ids" nolabel="1"/>
                </page>
            </notebook>
        </field>
    </record>

     <record model="ir.ui.view" id="ofh_payment_request_tree_view">
        <field name="name">ofh.payment.request.tree (in ofh_sale_order_sap)</field>
        <field name="model">ofh.payment.request</field>
        <field name="inherit_id" ref="ofh_payment_request.ofh_payment_request_tree_view"/>
        <field name="arch" type="xml">
            <tree position="inside">
                <field name="new_integration_status"/>
                <field name="new_payment_integration_status"/>
                <field name="new_sap_status"/>
                <field name="new_payment_sap_status"/>
            </tree>
        </field>
    </record>

</odoo>
