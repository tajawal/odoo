<odoo>

    <record model="ir.ui.view" id="res_currency_rate_tree_view">
        <field name="name">res.currency.rate.tree (in ofh_base_currency)</field>
        <field name="model">res.currency.rate</field>
        <field name="inherit_id" ref="base.view_currency_rate_tree"/>
        <field name="arch" type="xml">
            <field name="name" position="before">
                <field name="currency_id"/>
            </field>
            <tree position="attributes">
                <attribute name="delete">0</attribute>
                <attribute name="edit">0</attribute>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="res_currency_rate_act_window">
        <field name="name">Currency Rates</field>
        <field name="res_model">res.currency.rate</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

</odoo>
