<odoo>

    <record model="ir.ui.view" id="ofh_supplier_invoice_force_match_form_view">
        <field name="name">ofh.supplier.invoice.force.match.form (in ofh_payment_request_invoice)</field>
        <field name="model">ofh.supplier.invoice.force.match</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="line_id"/>
                    <field name="current_payment_request_id"/>
                    <field name="new_payment_request_id"/>
                </group>
                <footer>
                    <button name="force_match"
                            string="Force match"
                            class="btn-primary"
                            type="object"/>
                    <button string="Cancel"
                            class="btn-default"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="ofh_supplier_invoice_force_match_act_window">
        <field name="name">Force match</field>
        <field name="res_model">ofh.supplier.invoice.force.match</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>

</odoo>
