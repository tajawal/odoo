<odoo>

    <record model="ir.ui.view" id="ofh_payment_request_form_view">
        <field name="name">ofh.payment.request.form (in ofh_payment_request_invoice)</field>
        <field name="model">ofh.payment.request</field>
        <field name="inherit_id" ref="ofh_payment_request.ofh_payment_request_form_view"/>
        <field name="arch" type="xml">
            <group name="cost_pr_details" position="inside">
                <field name="estimated_cost_in_supplier_currency"/>
                <field name="supplier_total_amount" widget="monetary"/>
                <field name="supplier_shamel_total_amount" widget="monetary"/>
                <field name="supplier_currency_id" invisible="1"/>
            </group>
            <page name="cost_details" position="inside">
                <field name="supplier_invoice_ids" col="2" nolabel="1"
                       options="{'reload_on_button': true}"
                       attrs="{'invisible': [('order_type', '=', 'hotel')]}"/>
            </page>
        </field>
    </record>

    <record model="ir.ui.view" id="ofh_payment_request_form_view_2">
        <field name="name">ofh.payment.request.form.2 (in ofh_payment_request_invoice)</field>
        <field name="model">ofh.payment.request</field>
        <field name="inherit_id" ref="ofh_sale_order_payment_request.ofh_payment_request_form_view"/>
        <field name="arch" type="xml">
            <field name="ticketing_office_id" position="after">
                <field name="supplier_office_id"/>
            </field>
        </field>
    </record>

</odoo>
