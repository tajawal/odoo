<odoo>

    <record model="ir.ui.view" id="ofh_sale_order_form_view">
        <field name="name">ofh.sale.order.form (in ofh_sale_order)</field>
        <field name="model">ofh.sale.order</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="open_order_in_hub"
                            string="Open in HUB"
                            class="btn-primary"
                            type="object"/>
                    <button name="action_update_hub_data"
                            string="Update from HUB"
                            class="btn-warning"
                            type="object"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group name="header" col="4">
                        <field name="entity"/>
                        <field name="order_type"/>
                        <field name="created_at"/>
                        <field name="updated_at"/>
                        <field name="order_status"/>
                        <field name="currency_id"/>
                        <field name="total_amount" widget="monetary"/>
                        <field name="is_egypt"/>
                        <field name="employee_discount_tag"/>
                        <field name="customer_discount_tag"/>
                        <field name="point_of_sale"/>
                        <field name="ahs_group_name"/>
                        <field name="country_code"/>
                        <field name="booking_method"/>
                    </group>
                    <notebook>
                        <page name="sale_lines" string="Lines">
                            <group name="line_details" col="4">
                                <field name="office_id"/>
                                <field name="ticketing_office_id"/>
                                <field name="vendor_reference"/>
                                <field name="supplier_reference"/>
                            </group>
                            <group name="sale_lines">
                                <field name="line_ids" nolabel="1">
                                    <tree delete="0" create="0">
                                        <field name="name" invisible="1"/>
                                        <field name="order_id" invisible="1"/>
                                        <field name="currency_id" invisible="1"/>
                                        <field name="supplier_currency_id" invisible="1"/>
                                        <field name="vendor_currency_id" invisible="1"/>
                                        <field name="line_type"/>
                                        <field name="line_reference"/>
                                        <field name="vendor_name"/>
                                        <field name="supplier_name"/>
                                        <field name="vendor_cost_amount" widget="monetary" sum="Total"/>
                                        <field name="supplier_cost_amount" widget="monetary" sum="Total"/>
                                        <field name="service_fee_amount" widget="monetary" sum="Total"/>
                                        <field name="discount_amount" widget="monetary" sum="Total"/>
                                        <field name="tax_amount" widget="monetary" sum="Total"/>
                                        <field name="total_amount" widget="monetary" sum="Total"/>
                                        <field name="matching_status"/>
                                    </tree>
                                </field>
                            </group>
                            <group col="4" name="sale_totals" string="Sales Totals">
                                <field name="lines_total_service_fee" widget="monetary"/>
                                <field name="total_service_fee" widget="monetary"/>
                                <field name="lines_total_discount" widget="monetary"/>
                                <field name="total_discount" widget="monetary"/>
                                <field name="lines_total_tax" widget="monetary"/>
                                <field name="total_tax" widget="monetary"/>
                                <field name="lines_total_amount" widget="monetary"/>
                                <field name="total_amount" widget="monetary"/>
                            </group>
                        </page>
                        <page name="payments" string="Payments">
                            <group name="payment_details" col="4">
                                <field name="payment_status"/>
                                <field name="paid_at"/>
                            </group>
                            <group name="payment_lines">
                                <field name="payment_ids" nolabel="1"/>
                            </group>
                        </page>
                        <page name="costs" string="Cost">
                            <group col="4" name="cost_totals" string="Cost Totals">
                                <field name="total_vendor_cost" widget="monetary"/>
                                <field name="lines_total_vendor_cost" widget="monetary"/>
                                <field name="total_supplier_cost" widget="monetary"/>
                                <field name="vendor_currency_id"/>
                                <field name="supplier_currency_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="ofh_sale_order_search_view">
        <field name="name">ofh.sale.order.search (in ofh_sale_order)</field>
        <field name="model">ofh.sale.order</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="vendor_reference" filter_domain="['|', ('vendor_reference','ilike',self), ('supplier_reference','ilike', self)]" string="Locator"/>
                <field name="ticketing_office_id"/>
                <field name="office_id"/>
                <separator/>
                <filter name="tajawal" string="Tajawal" domain="[('entity', '=', 'tajawal')]"/>
                <filter name="almosafer" string="Almosafer" domain="[('entity', '=', 'almosafer')]"/>
                <filter name="egypt" string="Egypt" domain="[('is_egypt', '=', True)]"/>
                <separator/>
                <filter name="updated_this_month" string="Updated This month" domain="[('updated_at', '&gt;=', context_today().strftime('%%Y-%%m-01'))]"/>
                <filter name="created_this_month" string="Created this month" domain="[('created_at', '&gt;=', context_today().strftime('%%Y-%%m-01'))]"/>
                <filter name="updated_last_month" string="Updated last month" domain="['&amp;', ('updated_at', '&gt;=', (context_today() - relativedelta(months=1)).strftime('%%Y-%%m-01')), ('updated_at', '&lt;', context_today().strftime('%%Y-%%m-01'))]"/>
                <filter name="created_last_month" string="Created last month" domain="['&amp;', ('created_at', '&gt;=', (context_today() - relativedelta(months=1)).strftime('%%Y-%%m-01')), ('created_at', '&lt;', context_today().strftime('%%Y-%%m-01'))]"/>
                <separator/>
                <filter name="hotel" string="Hotel" domain="[('order_type', '=', 'hotel')]"/>
                <filter name="flight" string="Flight" domain="[('order_type', '=', 'flight')]"/>
                <separator/>
                <filter name="gds_order" string="GDS Orders" domain="[('order_type', '=', 'flight'), ('ticketing_office_id', '!=', 'TRAVEL FUSION')]"/>
                <filter name="gds_order" string="Travel Fusion Orders" domain="[('order_type', '=', 'flight'), ('ticketing_office_id', '=', 'TRAVEL FUSION')]"/>
                <separator/>
                <filter name="order_matched_status" string="Order Matched" domain="[('order_matching_status', '=', 'matched')]"/>
                <filter name="order_unmatched_status" string="Order Unmatched" domain="[('order_matching_status', '=', 'unmatched')]"/>
                <filter name="order_not_applicable_status" string="Order Not Applicable" domain="[('order_matching_status', '=', 'not_applicable')]"/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="ofh_sale_order_tree_view">
        <field name="name">ofh.sale.order.tree (in ofh_sale_order)</field>
        <field name="model">ofh.sale.order</field>
        <field name="arch" type="xml">
            <tree delete="0">
                <field name="entity"/>
                <field name="name"/>
                <field name="updated_at"/>
                <field name="order_type"/>
                <field name="ticketing_office_id"/>
                <field name="currency_id" invisible="1"/>
                <field name="vendor_currency_id" invisible="1"/>
                <field name="supplier_currency_id" invisible="1"/>
                <field name="total_amount"/>
                <field name="total_vendor_cost"/>
                <field name="order_status"/>
                <field name="payment_status"/>
                <field name="order_matching_status"/>
            </tree>
        </field>
    </record>

    <!-- Force resync data from hub. -->
    <record model="ir.actions.server" id="ofh_payment_request_import_records">
        <field name="name">Update from HUB</field>
        <field name="model_id" ref="model_ofh_sale_order"/>
        <field name = "binding_model_id" ref = "model_ofh_sale_order"/>
        <field name="state">code</field>
        <field name="code">
if records:
    records.action_update_orders_from_hub()
        </field>
    </record>


