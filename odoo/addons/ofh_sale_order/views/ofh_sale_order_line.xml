<odoo>

    <record model="ir.ui.view" id="ofh_sale_order_line_form_view">
        <field name="name">ofh.sale.order.line.form (in ofh_sale_order)</field>
        <field name="model">ofh.sale.order.line</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <group name="general_info" col="4">
                        <field name="order_id"/>
                        <field name="name"/>
                        <field name="created_at"/>
                        <field name="updated_at"/>
                        <field name="line_type"/>
                        <field name="line_category"/>
                        <field name="state"/>
                        <field name="hotel_name"/>
                        <field name="ahs_group_name"/>
                        <field name="validating_carrier"/>
                        <field name="is_domestic_ksa"/>
                        <field name="is_domestic_uae"/>
                        <field name="file_id" invisible="1"/>
                        <field name="file_reference"/>
                        <field name="ticket_sub_type"/>
                        <field name="booking_category"/>

                    </group>
                    <group name="traveller_info" col="4" string="Traveller Details"
                           attrs="{'invisible': [('line_type', '!=', 'flight')]}">
                        <field name="traveller"/>
                        <field name="traveller_type"/>
                        <field name="line_reference"/>
                        <field name="manual_line_reference"/>
                        <field name="booking_class"/>
                        <field name="office_id"/>
                        <field name="ticketing_office_id"/>
                        <field name="tour_code_office_id"/>
                        <field name="segment_count"/>
                        <field name="passengers_count"/>
                        <field name="destination_city"/>
                        <field name="origin_city"/>
                        <field name="route"/>
                        <field name="departure_date"/>
                        <field name="last_leg_flying_date"/>
                    </group>
                    <group name="segment_info" col="4" string="Hotel Details"
                           attrs="{'invisible': [('line_type', '!=', 'hotel')]}">
                        <field name="line_reference" string="Segment ID"/>
                        <field name="hotel_supplier_id"/>
                        <field name="contract"/>
                        <field name="hotel_id"/>
                        <field name="hotel_city"/>
                        <field name="hotel_country"/>
                        <field name="check_in_date"/>
                        <field name="segment_count"/>
                        <field name="checkout_date"/>
                        <field name="manual_checkout_date"/>
                        <field name="nb_nights"/>
                        <field name="manual_nb_nights"/>
                    </group>
                    <group name="line_statuses" col="4" string="Statuses">
                        <field name="matching_status"/>
                        <field name="not_applicable_flag"/>
                    </group>
                    <notebook>
                        <page name="sales_details" string="Sales Details">
                            <group name="sale_detail" string="Sale" col="4">
                                <field name="fare_difference" widget="monetary"/>
                                <field name="change_fee" widget="monetary"/>
                                <field name="booking_fee" widget="monetary"/>
                                <field name="insurance" widget="monetary"/>
                                <field name="discount" widget="monetary"/>
                                <field name="penalty" widget="monetary"/>
                                <field name="loss_amount" widget="monetary"/>
                                <field name="input_vat_amount" widget="monetary"/>
                                <field name="output_vat_amount" widget="monetary"/>
                                <field name="manual_output_vat_amount" widget="monetary"/>
                                <field name="change_fee_vat_amount" widget="monetary"/>
                                <field name="fare_difference_vat_amount" widget="monetary"/>
                                <field name="penalty_vat_amount" widget="monetary"/>
                                <field name="adm_vat_amount" widget="monetary"/>
                                <field name="booking_fee_vat_amount" widget="monetary"/>
                                <field name="deals_vat_amount" widget="monetary"/>
                                <field name="discount_vat_amount" widget="monetary"/>
                                <field name="tax_code"/>
                                <field name="loss_type"/>
                                <field name="service_fee_amount" widget="monetary"/>
                                <field name="sale_price" widget="monetary"/>
                                <field name="discount_amount" widget="monetary"/>
                                <field name="subtotal_amount"/>
                                <field name="tax_amount" widget="monetary"/>
                                <field name="total_amount"/>
                                <field name="currency_id"/>
                                <field name="tax_code"/>
                            </group>
                        </page>
                        <page name="cost_details" string="Cost Details">
                            <group name="vendor_detail" string="Vendor" col="4">
                                <field name="vendor_confirmation_number"/>
                                <field name="manual_vendor_confirmation_number"/>
                                <field name="vendor_name"/>
                                <field name="vendor_cost_amount" widget="monetary"/>
                                <field name="vendor_base_fare_amount" widget="monetary"/>
                                <field name="vendor_input_tax_amount" widget="monetary"/>
                                <field name="vendor_currency_id"/>
                            </group>
                            <group name="supplier_detail" string="Supplier" col="4">
                                <field name="supplier_confirmation_number"/>
                                <field name="manual_supplier_confirmation_number"/>
                                <field name="supplier_name"/>
                                <field name="supplier_cost_amount" widget="monetary"/>
                                <field name="supplier_base_fare_amount" widget="monetary"/>
                                <field name="supplier_input_tax_amount" widget="monetary"/>
                                <field name="supplier_currency_id"/>
                                <field name="exchange_rate"/>
                                <field name="total_supplier_price"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="ofh_sale_order_line_search_view">
        <field name="name">ofh.sale.order.line.search (in ofh_sale_order)</field>
        <field name="model">ofh.sale.order.line</field>
        <field name="arch" type="xml">
            <search>
                <field name="order_ids"/>
                <field name="line_reference"
                       filter_domain="['|', ('line_reference','ilike', self), ('manual_line_reference','ilike', self)]" string="Ticket/segment"/>
                <field name="vendor_confirmation_number"
                       filter_domain="
                            ['|', '|', '|', ('vendor_confirmation_number','ilike',self),
                            ('manual_vendor_confirmation_number','ilike', self),
                            ('supplier_confirmation_number','ilike', self),
                            ('manual_supplier_confirmation_number','ilike', self)]"
                       string="Locator"/>
                <field name="ticketing_office_id"/>
                <field name="office_id"/>
                <field name="supplier_name"/>
                <field name="supplier_confirmation_number"/>
                <field name="vendor_confirmation_number"/>
                <field name="file_reference"/>
                <separator/>
                <filter name="tajawal" string="Tajawal" domain="[('order_id.entity', '=', 'tajawal')]"/>
                <filter name="almosafer" string="Almosafer" domain="[('order_id.entity', '=', 'almosafer')]"/>
                <filter name="egypt" string="Egypt" domain="[('order_id.is_egypt', '=', True)]"/>
                <separator/>
                <filter name="updated_this_month" string="Updated This month" domain="[('updated_at', '&gt;=', context_today().strftime('%%Y-%%m-01'))]"/>
                <filter name="created_this_month" string="Created this month" domain="[('created_at', '&gt;=', context_today().strftime('%%Y-%%m-01'))]"/>
                <filter name="updated_last_month" string="Updated last month" domain="['&amp;', ('updated_at', '&gt;=', (context_today() - relativedelta(months=1)).strftime('%%Y-%%m-01')), ('updated_at', '&lt;', context_today().strftime('%%Y-%%m-01'))]"/>
                <filter name="created_last_month" string="Created last month" domain="['&amp;', ('created_at', '&gt;=', (context_today() - relativedelta(months=1)).strftime('%%Y-%%m-01')), ('created_at', '&lt;', context_today().strftime('%%Y-%%m-01'))]"/>
                <separator/>
                <filter name="hotel" string="Hotel" domain="[('line_type', '=', 'hotel')]"/>
                <filter name="flight" string="Flight" domain="[('line_type', '=', 'flight')]"/>
                <separator/>
                <filter name="gds_order" string="GDS Orders" domain="[('order_type', '=', 'flight'), ('ticketing_office_id', '!=', 'TRAVEL FUSION')]"/>
                <filter name="gds_order" string="Travel Fusion Orders" domain="[('order_type', '=', 'flight'), ('ticketing_office_id', '=', 'TRAVEL FUSION')]"/>
                <separator/>
                <filter name="order_matched_status" string="Matched" domain="[('matching_status', '=', 'matched')]"/>
                <filter name="order_unmatched_status" string="Unmatched" domain="[('matching_status', '=', 'unmatched')]"/>
                <filter name="order_not_applicable_status" string="Not Applicable" domain="[('matching_status', '=', 'not_applicable')]"/>
                <separator/>
                <filter name="hotel_skipped_lines" string="Hotel Skipped Lines" domain="[('hotel_failed_reason', '=', True)]"/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="ofh_sale_order_line_pivot_view">
        <field name="name">ofh.sale.order.line.pivot (in ofh_sale_order)</field>
        <field name="model">ofh.sale.order.line</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="matching_status" type="row"/>
                <field name="total_amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <record model="ir.ui.view" id="ofh_sale_order_line_tree_view">
        <field name="name">ofh.sale.order.line.tree (in ofh_sale_order)</field>
        <field name="model">ofh.sale.order.line</field>
        <field name="arch" type="xml">
            <tree delete="0">
                <field name="name" invisible="1"/>
                <field name="order_id"/>
                <field name="file_reference"/>
                <field name="booking_category"/>
                <field name="currency_id" invisible="1"/>
                <field name="supplier_currency_id" invisible="1"/>
                <field name="vendor_currency_id" invisible="1"/>
                <field name="line_type"/>
                <field name="line_category" attrs="{'invisible':[('line_type', '!=', 'other')]}"/>
                <field name="line_reference"/>
                <field name="vendor_name"/>
                <field name="supplier_name"/>
                <field name="vendor_cost_amount" widget="monetary" sum="Total"/>
                <field name="supplier_cost_amount" widget="monetary" sum="Total"/>
                <field name="service_fee_amount" widget="monetary" sum="Total"/>
                <field name="discount_amount" widget="monetary" sum="Total"/>
                <field name="tax_amount" widget="monetary" sum="Total"/>
                <field name="total_amount" widget="monetary" sum="Total"/>
                <field name="matching_status"/>
            </tree>
        </field>
    </record>

</odoo>
