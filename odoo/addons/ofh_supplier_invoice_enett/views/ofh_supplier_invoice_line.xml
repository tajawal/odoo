<odoo>
    <record model="ir.ui.view" id="ofh_supplier_invoice_line_form_view">
        <field name="name">ofh.supplier.invoice.line.form (in ofh_supplier_invoice_enett)</field>
        <field name="model">ofh.supplier.invoice.line</field>
        <field name="inherit_id" ref="ofh_supplier_invoice.ofh_supplier_invoice_line_form_view"/>
        <field name="arch" type="xml">
            <field name="total" position="after">
                <field name="order_reference" sum="Order Reference"/>
            </field>
        </field>
    </record>

    <record model="ir.actions.act_window" id="enett_supplier_invoice_line_act_window">
        <field name="name">Enett lines</field>
        <field name="res_model">ofh.supplier.invoice.line</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('invoice_type', '=', 'enett')]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.ui.menu" id="ofh_supplier_invoice_line_line_menu">
        <field name="name">Enett lines</field>
        <field name="parent_id" ref="ofh_supplier_invoice.ofh_supplier_invoice_line_main_menu"/>
        <field name="action" ref="enett_supplier_invoice_line_act_window"/>
        <field name="sequence" eval="20"/> 
    </record>

    <record model="ir.ui.menu" id="ofh_enett_supplier_invoice_menu">
        <field name="name">Enett Report</field>
        <field name="parent_id" ref="ofh_supplier_invoice.ofh_supplier_invoice_import_main_menu"/>
        <field name="action" ref="ofh_supplier_invoice_enett.ofh_supplier_invoice_import_act_window"/>
        <field name="sequence" eval="10"/>
    </record>

</odoo>
