<odoo>

    <record model="ir.ui.view" id="ofh_payment_request_form_view">
        <field name="name">ofh.payment.request.form (in ofh_sale_order_payment_request)</field>
        <field name="model">ofh.payment.request</field>
        <field name="inherit_id" ref="ofh_payment_request.ofh_payment_request_form_view"/>
        <field name="arch" type="xml">
            <field name="entity" position="after">
                <field name="ticketing_office_id"/>
            </field>
            <group name="general_details" position="inside">
                <field name="order_id"/>
            </group>
            <group name="status_details" position="inside">
                <field name="payment_request_status"/>
            </group>
            <page name="order_details" position="inside">
                <group col="4" name="sale_order_details" string="Order Details">
                    <field name="order_created_at"/>
                    <field name="order_updated_at"/>
                    <field name="order_type"/>
                    <field name="order_amount"/>
                    <field name="order_discount"/>
                </group>
            </page>
            <page name="cost_details" position="inside">
                <field name="order_supplier_currency_id" invisible="1"/>
                <group col="4" name="cost_order_details">
                    <field name="order_supplier_cost" widget="monetary"/>
                </group>
            </page>
            <group name="vendor_details" position="inside">
                <group>
                    <field name="supplier_reference"/>
                    <field name="vendor_reference"/>
                </group>
            </group>
        </field>
    </record>

    <record model="ir.ui.view" id="ofh_payment_request_search_view">
        <field name="name">ofh.payment.request.search (in ofh_sale_order_payment_request)</field>
        <field name="model">ofh.payment.request</field>
        <field name="inherit_id" ref="ofh_payment_request.ofh_payment_request_search_view"/>
        <field name="arch" type="xml">
            <filter name="almosafer" position="after">
                <separator/>
                <filter name="incomplete_pr" string="Incomplete Data"
                        domain="[('payment_request_status', '=', 'incomplete')]"/>
                <filter name="ready_pr" string="Ready for matching"
                        domain="[('payment_request_status', '=', 'ready')]"/>
            </filter>
        </field>
    </record>

    <record model="ir.ui.view" id="ofh_payment_request_tree_view">
        <field name="name">ofh.payment.request.tree (in ofh_sale_order_payment_request)</field>
        <field name="model">ofh.payment.request</field>
        <field name="inherit_id" ref="ofh_payment_request.ofh_payment_request_tree_view"/>
        <field name="arch" type="xml">
            <tree position="attributes">
                <attribute name="decoration-bf">matching_status=='matched'</attribute>
                <attribute name="decoration-muted">payment_request_status=='incomplete'</attribute>
            </tree>
            <field name="matching_status" position="after">
                <field name="payment_request_status"/>
            </field>
            <field name="entity" position="after">
                <field name="request_type"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="ofh_payment_request_pivot_view">
        <field name="name">ofh.payment.reques.pivot (in ofh_sale_order_payment_request)</field>
        <field name="model">ofh.payment.request</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="payment_request_status" type="row"/>
                <field name="request_type" type="row"/>
            </pivot>
        </field>
    </record>

</odoo>
