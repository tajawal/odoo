<odoo>

    <record model="ir.ui.view" id="ofh_sale_order_form_view">
        <field name="name">ofh.sale.order.form (in ofh_sale_order_payment_request)</field>
        <field name="model">ofh.sale.order</field>
        <field name="inherit_id" ref="ofh_sale_order.ofh_sale_order_form_view"/>
        <field name="arch" type="xml">
            <group name="header" position="inside">
                <field name="is_full_refund"/>
            </group>
            <notebook position="inside">
                <page name="payment_requests" string="Payment Requests">
                    <field name="payment_request_ids" nolabel="1"/>
                </page>
            </notebook>
        </field>
    </record>

    <record model="ir.ui.menu" id="ofh_payment_request_menu">
        <field name="name">Payment Requests</field>
        <field name="parent_id" ref="ofh_sale_order.ofh_sale_order_main_menu"/>
        <field name="sequence" eval="20"/>
    </record>

    <record model="ir.ui.menu" id="all_payment_request_menu">
        <field name="name">All PRs</field>
        <field name="parent_id" ref="ofh_payment_request_menu"/>
        <field name="action" ref="ofh_payment_request.ofh_payment_request_all_act_window"/>
        <field name="sequence" eval="10"/>
    </record>

    <record model="ir.ui.menu" id="almosafer_payment_request_menu">
        <field name="name">Almosafer PRs</field>
        <field name="parent_id" ref="ofh_payment_request_menu"/>
        <field name="action" ref="ofh_payment_request.ofh_payment_request_almosafer_act_window"/>
        <field name="sequence" eval="20"/>
    </record>

    <record model="ir.ui.menu" id="tajawal_payment_request_menu">
        <field name="name">Tajawal PRs</field>
        <field name="parent_id" ref="ofh_payment_request_menu"/>
        <field name="action" ref="ofh_payment_request.ofh_payment_request_tajawal_act_window"/>
        <field name="sequence" eval="30"/>
    </record>

    <record model="ir.ui.menu" id="incomplete_payment_request_menu">
        <field name="name">Incomplete PRs</field>
        <field name="parent_id" ref="ofh_payment_request_menu"/>
        <field name="action" ref="ofh_payment_request.ofh_payment_request_incomplete_act_window"/>
        <field name="sequence" eval="40"/>
    </record>

</odoo>
