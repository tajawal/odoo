<odoo>
    <record model="ir.ui.view" id="ofh_bank_settlement_form_view">
        <field name="name">ofh.bank.settlement.from (in ofh_bank_settlement)</field>
        <field name="model">ofh.bank.settlement</field>
        <field name="inherit_id" ref="ofh_bank_settlement.ofh_bank_settlement_form_view"/>
        <field name="arch" type="xml">
            <group position="after">
                <group name="statuses" string="Statuses" col="4">
                    <field name="matching_status"/>
                </group>
                <group name="references" string="References" col="4">
                    <field name="payment_gateway_id"/>
                </group>
            </group>

        </field>
    </record>

    <record model="ir.ui.view" id="ofh_bank_settlement_tree_view">
        <field name="name">ofh.bank.settlement.tree (in ofh_bank_settlement)</field>
        <field name="model">ofh.bank.settlement</field>
        <field name="inherit_id" ref="ofh_bank_settlement.ofh_bank_settlement_tree_view"/>
        <field name="arch" type="xml">
            <tree position="inside">
                <field name="matching_status"/>
            </tree>
        </field>
    </record>

</odoo>
