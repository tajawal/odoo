<odoo>

    <record model="ir.ui.view" id="ofh_payment_request_form_view">
        <field name="name">ofh.payment.request.form (in ofh_payment_request)</field>
        <field name="model">ofh.payment.request</field>
        <field name="arch" type="xml">
            <form create="0" duplicate="0" delete="0">
                <sheet>
                    <field name="currency_id" invisible="1"/>
                    <group col="4" name="general_details" string="General Information">
                        <field name="track_id"/>
                        <field name="order_reference"/>
                        <field name="request_type"/>
                        <field name="request_status"/>
                        <field name="request_reason"/>
                        <field name="total_amount" widget="monetary"/>
                        <field name="entity"/>
                        <field name="is_egypt"/>
                    </group>
                    <group col="4" name="status_details" string="Statuses">
                        <field name="pr_matching_status"/>
                        <field name="reconciliation_status"/>
                        <field name="is_applicable"/>
                    </group>
                    <notebook>
                        <page name="payment_gateway_detail" string="Payment Gateway &amp; Bank Settlement">
                            <group col="4" string="Payment Gateway">
                                <field name="payment_gateway_id"/>
                                <field name="response_description"/>
                                <field name="arn"/>
                                <field name="is_apple_pay"/>
                                <field name="pg_payment_status"/>
                                <field name="entity"/>
                                <field name="pg_provider"/>
                                <field name="total"/>
                            </group>
                            <group col="4" string="Bank Settlement">
                                <field name="bank_settlement_id"/>
                                <field name="bank_name"/>
                                <field name="settlement_date"/>
                                <field name="is_mada"/>
                                <field name="gross_amount"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="ofh_payment_request_search_view">
        <field name="name">ofh.payment.request.search (in ofh_payment_request)</field>
        <field name="model">ofh.payment.request</field>
        <field name="arch" type="xml">
            <search>
                <field name="order_reference"/>
                <field name="track_id"/>
                <field name="vendor_id"/>
                <separator/>
                <filter name="tajawal" string="Tajawal" domain="[('entity', '=', 'tajawal')]"/>
                <filter name="almosafer" string="Almosafer" domain="[('entity', '=', 'almosafer')]"/>
                <!-- Payment Request Status -->
                <separator/>
                <filter name="charge_pr" string="Charge"
                        domain="[('request_type', '=', 'charge')]"/>
                <filter name="refund_pr" string="Refund"
                        domain="[('request_type', '=', 'refund')]"/>
                <filter name="void_pr" string="Void"
                        domain="[('request_type', '=', 'void')]"/>
                <separator/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="ofh_payment_request_tree_view">
        <field name="name">ofh.payment.request.tree (in ofh_payment_request)</field>
        <field name="model">ofh.payment.request</field>
        <field name="arch" type="xml">
            <tree duplicate="0" delete="0">
                <field name="entity"/>
                <field name="track_id"/>
                <field name="updated_at"/>
                <field name="request_type"/>
                <field name="total_amount" widget="monetary"/>
                <field name="currency_id" invisible="1"/>
                <field name="pr_matching_status"/>
                <field name="reconciliation_status"/>
                <field name="is_applicable"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="ofh_payment_request_all_act_window">
        <field name="name">All Payment Requests</field>
        <field name="res_model">ofh.payment.request</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.actions.act_window.view" id="ofh_payment_request_all_act_window_tree_view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="ofh_payment_request_tree_view"/>
        <field name="act_window_id" ref="ofh_payment_request_all_act_window"/>
    </record>

    <record model="ir.actions.act_window.view" id="ofh_payment_request_all_act_window_form_view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="ofh_payment_request_form_view"/>
        <field name="act_window_id" ref="ofh_payment_request_all_act_window"/>
    </record>

</odoo>
