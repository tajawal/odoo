<odoo>

    <record model="ir.ui.view" id="ofh_bank_settlement_force_match_form_view">
        <field name="name">ofh.bank.settlement.force.match.form (in ofh_bank_settlement)</field>
        <field name="model">ofh.bank.settlement.force.match</field>
        <field name="arch" type="xml">
            <form>
                <group name="main_group">
                    <group name="current_values">
                        <field name="current_payment_gateway_id"/>
                    </group>
                    <group name="new_values">
                        <field name="new_payment_gateway_id"/>
                    </group>
                </group>
                <footer>
                    <button name="force_match"
                            string="Force match with Payment Gateway"
                            class="btn-primary"
                            type="object"/>
                    <button string="Cancel"
                            class="btn-default"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="ofh_bank_settlement_force_match_act_window">
        <field name="name">Force match with Payment Gateway</field>
        <field name="res_model">ofh.bank.settlement.force.match</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>

</odoo>
