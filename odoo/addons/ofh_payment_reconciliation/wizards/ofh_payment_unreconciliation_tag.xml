<odoo>

    <record model="ir.ui.view" id="ofh_payment_unreconciliation_tag_form_view">
        <field name="name">ofh.payment.unreconciliation.tag.form (in ofh_payment)</field>
        <field name="model">ofh.payment.unreconciliation.tag</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="payment_ids" invisible="1"/>
                    <field name="unreconciliation_tag"/>
                </group>
                <footer>
                    <button name="action_update_unreconciliation_tag"
                            string="Save"
                            class="btn-primary"
                            type="object"/>
                    <button string="Cancel"
                            class="btn-default"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="ofh_payment_unreconciliation_tag_act_window">
        <field name="name">Unreconciliation Reason</field>
        <field name="res_model">ofh.payment.unreconciliation.tag</field>
        <field name="view_mode">form</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="ofh_payment_unreconciliation_tag_form_view"/>
        <field name="binding_model_id" ref="model_ofh_payment"/>
        <field name="target">new</field>
    </record>


</odoo>
