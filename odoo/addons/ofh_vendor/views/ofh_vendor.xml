<odoo>

    <record model="ir.ui.view" id="ofh_vendor_form_view">
        <field name="name">ofh.vendor.form (in ofh_vendor)</field>
        <field name="model">ofh.vendor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group name="main_group" col="4">
                        <field name="name"/>
                        <field name="contract_id"/>
                        <field name="b2b_hotel_id"/>
                        <field name="tv_hotel_id"/>
                        <field name="sap_id"/>
                        <field name="sap_legal_entity_id"/>
                    </group>
                </sheet>
                <div class="oe_chatter"></div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="ofh_vendor_search_view">
        <field name="name">ofh.vendor.search (in ofh_vendor)</field>
        <field name="model">ofh.vendor</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="contract_id"/>
                <field name="b2b_hotel_id"/>
                <field name="tv_hotel_id"/>
                <field name="sap_id"/>
                <field name="sap_legal_entity_id"/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="ofh_vendor_tree_view">
        <field name="name">ofh.vendor.tree (in ofh_vendor)</field>
        <field name="model">ofh.vendor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="contract_id"/>
                <field name="b2b_hotel_id"/>
                <field name="tv_hotel_id"/>
                <field name="sap_id"/>
                <field name="sap_legal_entity_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="ofh_vendor_act_window">
        <field name="name">Vendors</field>
        <field name="res_model">ofh.vendor</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

</odoo>
