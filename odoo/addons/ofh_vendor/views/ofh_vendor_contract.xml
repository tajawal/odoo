<odoo>

    <record model="ir.ui.view" id="ofh_vendor_contract_form_view">
        <field name="name">ofh.vendor.contract.form (in ofh_vendor)</field>
        <field name="model">ofh.vendor.contract</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <group col="4">
                        <field name="name"/>
                        <field name="supplier_type"/>
                        <field name="supplier_id"/>
                        <field name="contract_id"/>
                        <field name="sap_vendor_code"/>
                        <field name="sap_legal_entity_code"/>
                    </group>
                    <notebook>
                        <page name="vendors" string="Vendors">
                            <field name="vendor_ids" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter"></div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="ofh_vendor_contract_search_view">
        <field name="name">ofh.vendor.contract.search (in ofh_vendor)</field>
        <field name="model">ofh.vendor.contract</field>
        <field name="arch" type="xml">
            <search>
                <field name="supplier_type"/>
                <field name="name"/>
                <field name="contract_id"/>
                <field name="sap_vendor_code"/>
                <field name="sap_legal_entity_code"/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="ofh_vendor_contract_tree_view">
        <field name="name">ofh.vendor.contract.tree (in ofh_vendor)</field>
        <field name="model">ofh.vendor.contract</field>
        <field name="arch" type="xml">
            <tree>
                <field name="supplier_type"/>
                <field name="name"/>
                <field name="contract_id"/>
                <field name="sap_vendor_code"/>
                <field name="sap_legal_entity_code"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="ofh_vendor_contract_act_window">
        <field name="name">Contracts</field>
        <field name="res_model">ofh.vendor.contract</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

</odoo>
