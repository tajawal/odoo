<odoo>

    <record model="ir.ui.view" id="ofh_payment_request_form_view">
        <field name="name">ofh.payment.request.form (in ofh_payment_request)</field>
        <field name="model">ofh.payment.request</field>
        <field name="arch" type="xml">
            <form create="0" duplicate="0" delete="0">
                <header>
                    <button name="open_order_in_hub"
                            string="Open in HUB"
                            class="btn-primary"
                            attrs="{'invisible': [('order_reference', '=', False)]}"
                            type="object"/>
                    <button name="action_update_hub_data"
                            string="Update from HUB"
                            class="btn-warning"
                            attrs="{'invisible': [('order_reference', '=', False)]}"
                            type="object"/>
                </header>
                <sheet>
                    <field name="currency_id" invisible="1"/>
                    <group col="4" name="general_details" string="General Information">
                        <field name="track_id"/>
                        <field name="order_reference"/>
                        <field name="request_type"/>
                        <field name="request_status"/>
                        <field name="request_reason"/>
                        <field name="total_amount" widget="monetary"/>
                        <field name="entity"/>
                        <field name="is_egypt"/>
                    </group>
                    <group name="vendor_details" string="Vendor Details">
                        <group>
                            <field name="vendor_id"/>
                            <field name="plan_code"/>
                        </group>
                    </group>
                    <group col="4" name="status_details" string="Statuses">
                        <field name="created_at"/>
                        <field name="updated_at"/>
                        <field name="matching_status"/>
                        <field name="not_applicable_flag"/>
                    </group>
                    <notebook>
                        <page name="order_details" string="Sale Details">
                            <group col="4" name="sale_pr_details">
                                <field name="fare_difference" widget="monetary"/>
                                <field name="change_fee" widget="monetary"/>
                                <field name="booking_fee" widget="monetary"/>
                                <field name="insurance" widget="monetary"/>
                                <field name="discount" widget="monetary"/>
                                <field name="penalty" widget="monetary"/>
                                <field name="loss_amount" widget="monetary"/>
                                <field name="input_vat_amount" widget="monetary"/>
                                <field name="output_vat_amount" widget="monetary"/>
                                <field name="manual_output_vat_amount" widget="monetary"/>
                                <field name="change_fee_vat_amount" widget="monetary"/>
                                <field name="fare_difference_vat_amount" widget="monetary"/>
                                <field name="penalty_vat_amount" widget="monetary"/>
                                <field name="adm_vat_amount" widget="monetary"/>
                                <field name="booking_fee_vat_amount" widget="monetary"/>
                                <field name="deals_vat_amount" widget="monetary"/>
                                <field name="discount_vat_amount" widget="monetary"/>
                                <field name="deal_amount" widget="monetary"/>
                                <field name="tax_code"/>
                                <field name="loss_type"/>
                            </group>
                        </page>
                        <page name="cost_details" string="Cost Details">
                            <group col="4" name="cost_pr_details">
                                <field name="estimated_cost" widget="monetary"/>
                            </group>
                        </page>
                        <page name="payment_details" string="Payment Details">
                            <group col="4" name="payment_general_info">
                                <field name="auth_code"/>
                                <field name="provider"/>
                                <field name="payment_mode"/>
                            </group>
                            <group col="4" name="payment_charge">
                                <field name="payment_reference"/>
                                <field name="manual_payment_reference"/>
                            </group>
                            <field name="charge_ids" nolabel="1"/>
                        </page>
                        <page name="binding_details" string="Bidings">
                            <field name="hub_bind_ids" nolabel="1">
                                <tree>
                                    <field name="backend_id"/>
                                    <field name="external_id"/>
                                    <field name="created_at"/>
                                    <field name="updated_at"/>
                                </tree>
                            </field>
                        </page>
                        <page name="addtional_details" string="Notes">
                            <group>
                                <field name="notes" nolabel="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="ofh_payment_request_search_view">
        <field name="name">ofh.payment.request.search (in ofh_payment_request)</field>
        <field name="model">ofh.payment.request</field>
        <field name="arch" type="xml">
            <search>
                <field name="order_reference"/>
                <field name="track_id"/>
                <field name="vendor_id"/>
                <separator/>
                <filter name="tajawal" string="Tajawal" domain="[('entity', '=', 'tajawal')]"/>
                <filter name="almosafer" string="Almosafer" domain="[('entity', '=', 'almosafer')]"/>
                <!-- Payment Request Status -->
                <separator/>
                <filter name="charge_pr" string="Charge"
                        domain="[('request_type', '=', 'charge')]"/>
                <filter name="refund_pr" string="Refund"
                        domain="[('request_type', '=', 'refund')]"/>
                <filter name="void_pr" string="Void"
                        domain="[('request_type', '=', 'void')]"/>
                <separator/>
                <separator/>
                <filter name="updated_this_month"
                        string="Updated This month"
                        domain="[('updated_at', '&gt;=', context_today().strftime('%%Y-%%m-01'))]"/>
                <filter name="updated_last_month"
                        string="Updated last month"
                        domain="['&amp;', ('updated_at', '&gt;=', (context_today() - relativedelta(months=1)).strftime('%%Y-%%m-01')), ('updated_at', '&lt;', context_today().strftime('%%Y-%%m-01'))]"/>
                <separator/>
                <!-- Supplier status -->
                <filter name="supplier_unmatched_status" string="Unmatched"
                        domain="[('matching_status', '=', 'unmatched')]"/>
                <filter name="supplier_matched_status" string="matched"
                        domain="[('matching_status', '=', 'matched')]"/>
                <filter name="supplier_not_applicable_status" string="Not Applicable"
                        domain="[('matching_status', '=', 'not_applicable')]"/>
                <separator/>
                <filter name="flight_prs" string="Flight PRs"
                        domain="[('order_id.order_type', '=', 'flight')]"/>
                <filter name="hotel_prs" string="Hotel PRs"
                        domain="[('order_id.order_type', '=', 'hotel')]"/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="ofh_payment_request_tree_view">
        <field name="name">ofh.payment.request.tree (in ofh_payment_request)</field>
        <field name="model">ofh.payment.request</field>
        <field name="arch" type="xml">
            <tree duplicate="0" delete="0">
                <field name="entity"/>
                <field name="track_id"/>
                <field name="updated_at"/>
                <field name="request_type"/>
                <field name="total_amount" widget="monetary"/>
                <field name="currency_id" invisible="1"/>
                <field name="matching_status"/>
            </tree>
        </field>
    </record>

    <!-- Force resync data from hub. -->
    <record model="ir.actions.server" id="ofh_payment_request_import_records">
        <field name="name">Update from HUB</field>
        <field name="model_id" ref="model_ofh_payment_request"/>
        <field name = "binding_model_id" ref = "model_ofh_payment_request"/>
        <field name="state">code</field>
        <field name="code">
if records:
    records.action_update_orders_from_hub()
        </field>
    </record>

    <record model="ir.actions.act_window" id="ofh_payment_request_all_act_window">
        <field name="name">Payment Requests</field>
        <field name="res_model">ofh.payment.request</field>
        <field name="view_mode">tree,form,pivot</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

