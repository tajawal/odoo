        <field name="res_model">ofh.payment.request</field>
        <field name="view_mode">tree,form,pivot</field>
        <field name="domain">[('entity', '=', 'almosafer')]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.actions.act_window" id="ofh_payment_request_tajawal_act_window">
        <field name="name">Payment Requests</field>
        <field name="res_model">ofh.payment.request</field>
        <field name="view_mode">tree,form,pivot</field>
        <field name="domain">[('entity', '=', 'tajawal')]</field>
        <field name="context">{}</field>
