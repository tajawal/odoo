    <record model="ir.ui.menu" id="res_currency_menu">
        <field name="name">Currencies</field>
        <field name="parent_id" ref="ofh_payment_request_currencies_main_menu"/>
        <field name="action" ref="base.action_currency_form"/>
        <field name="sequence" eval="10"/>
